# =========================
# Application
# =========================
APP_NAME="eSarpra"
APP_ENV=development
APP_PORT=3000
APP_URL=http://localhost:3000

# =========================
# Database (MySQL)
# =========================
DB_HOST=localhost
DB_PORT=3306
DB_NAME=ukk
DB_USER=root
DB_PASS=

# Sequelize config
DB_DIALECT=mysql
DB_LOGGING=false

# =========================
# Session
# =========================
SESSION_SECRET=change_this_secret_key

# =========================
# Security
# =========================
BCRYPT_SALT_ROUNDS=10
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX=100

# =========================
# Cache
# =========================
CACHE_TTL=600

# =========================
# Business Rules
# =========================
OVERDUE_FINE_PER_DAY=5000

# =========================
# Logging
# =========================
LOG_LEVEL=info

# =========================
# Mail (Mailpit / SMTP)
# =========================
MAIL_HOST=localhost
MAIL_PORT=1025
MAIL_SECURE=false
MAIL_USER=
MAIL_PASS=
MAIL_FROM="eSarpra <no-reply@esarpra.local>"

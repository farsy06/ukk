<div class="row">
    <div class="col-12">
        <div class="d-flex justify-content-between align-items-center">
            <div>
                <h2>Dashboard Petugas</h2>
                <p class="text-muted mb-0">Kelola pengajuan peminjaman alat dari peminjam.</p>
            </div>
            <div class="text-end">
                <div class="badge bg-warning">
                    <i class="fas fa-user-tie"></i> Petugas
                </div>
                <div class="text-muted small">
                    <i class="fas fa-clock"></i> 
                    <%= new Date().toLocaleDateString('id-ID', { 
                        weekday: 'long', 
                        year: 'numeric', 
                        month: 'long', 
                        day: 'numeric' 
                    }) %>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="row mt-4">
    <div class="col-md-3">
        <div class="card border-info">
            <div class="card-body">
                <div class="d-flex justify-content-between">
                    <div>
                        <h6 class="card-title text-info">Pengajuan Baru</h6>
                        <p class="card-text text-muted">Menunggu persetujuan</p>
                    </div>
                    <div class="align-self-center">
                        <i class="fas fa-clock fa-2x text-info"></i>
                    </div>
                </div>
                <div class="d-flex justify-content-between align-items-center mt-3">
                    <span class="badge bg-info">Pending</span>
                    <span class="badge bg-primary">Jumlah: 
                        <% 
                        const pendingCount = (typeof peminjaman !== 'undefined' && peminjaman) ? 
                            peminjaman.filter(p => p.status === 'pending').length : 0;
                        %>
                        <%= pendingCount %>
                    </span>
                </div>
            </div>
        </div>
    </div>

    <div class="col-md-3">
        <div class="card border-success">
            <div class="card-body">
                <div class="d-flex justify-content-between">
                    <div>
                        <h6 class="card-title text-success">Disetujui</h6>
                        <p class="card-text text-muted">Sudah disetujui</p>
                    </div>
                    <div class="align-self-center">
                        <i class="fas fa-check-circle fa-2x text-success"></i>
                    </div>
                </div>
                <div class="d-flex justify-content-between align-items-center mt-3">
                    <span class="badge bg-success">Approved</span>
                    <span class="badge bg-success">Jumlah: 
                        <% 
                        const disetujuiCount = (typeof peminjaman !== 'undefined' && peminjaman) ? 
                            peminjaman.filter(p => p.status === 'disetujui').length : 0;
                        %>
                        <%= disetujuiCount %>
                    </span>
                </div>
            </div>
        </div>
    </div>

    <div class="col-md-3">
        <div class="card border-primary">
            <div class="card-body">
                <div class="d-flex justify-content-between">
                    <div>
                        <h6 class="card-title text-primary">Sedang Dipinjam</h6>
                        <p class="card-text text-muted">Dalam masa peminjaman</p>
                    </div>
                    <div class="align-self-center">
                        <i class="fas fa-handshake fa-2x text-primary"></i>
                    </div>
                </div>
                <div class="d-flex justify-content-between align-items-center mt-3">
                    <span class="badge bg-primary">Dipinjam</span>
                    <span class="badge bg-primary">Jumlah: 
                        <% 
                        const dipinjamCount = (typeof peminjaman !== 'undefined' && peminjaman) ? 
                            peminjaman.filter(p => p.status === 'dipinjam').length : 0;
                        %>
                        <%= dipinjamCount %>
                    </span>
                </div>
            </div>
        </div>
    </div>

    <div class="col-md-3">
        <div class="card border-secondary">
            <div class="card-body">
                <div class="d-flex justify-content-between">
                    <div>
                        <h6 class="card-title text-secondary">Dikembalikan</h6>
                        <p class="card-text text-muted">Sudah dikembalikan</p>
                    </div>
                    <div class="align-self-center">
                        <i class="fas fa-undo fa-2x text-secondary"></i>
                    </div>
                </div>
                <div class="d-flex justify-content-between align-items-center mt-3">
                    <span class="badge bg-secondary">Selesai</span>
                    <span class="badge bg-secondary">Jumlah: 
                        <% 
                        const dikembalikanCount = (typeof peminjaman !== 'undefined' && peminjaman) ? 
                            peminjaman.filter(p => p.status === 'dikembalikan').length : 0;
                        %>
                        <%= dikembalikanCount %>
                    </span>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="row mt-4">
    <div class="col-12">
        <div class="card">
            <div class="card-header">
                <h6 class="mb-0"><i class="fas fa-list"></i> Daftar Peminjaman</h6>
            </div>
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center mb-3">
                    <div class="d-flex gap-2">
                        <div class="input-group" style="width: 300px;">
                            <input type="text" class="form-control" id="searchInput" placeholder="Cari peminjaman...">
                            <button class="btn btn-outline-secondary" type="button" id="clearSearch">
                                <i class="fas fa-times"></i>
                            </button>
                        </div>
                    </div>
                    <div>
                        <span class="badge bg-info">Total: 
                            <% 
                            const totalCount = (typeof peminjaman !== 'undefined' && peminjaman) ? 
                                peminjaman.length : 0;
                            %>
                            <%= totalCount %>
                        </span>
                    </div>
                </div>

                <div class="table-responsive">
                    <table class="table table-striped table-hover" id="peminjamanTable">
                        <thead class="table-dark">
                            <tr>
                                <th>No</th>
                                <th>Peminjam</th>
                                <th>Alat</th>
                                <th>Tanggal Pinjam</th>
                                <th>Tanggal Kembali</th>
                                <th>Status</th>
                                <th>Aksi</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% if (typeof peminjaman !== 'undefined' && peminjaman && peminjaman.length > 0) { %>
                                <% peminjaman.forEach(function(item, index) { %>
                                    <tr data-id="<%= item.id %>" data-peminjam="<%= item.user.nama %>" data-alat="<%= item.alat.nama_alat %>" data-status="<%= item.status %>">
                                        <td><%= index + 1 %></td>
                                        <td>
                                            <div class="d-flex align-items-center">
                                                <div class="bg-info rounded-circle me-2" style="width: 40px; height: 40px; display: flex; align-items: center; justify-content: center;">
                                                    <i class="fas fa-user text-white"></i>
                                                </div>
                                                <div>
                                                    <div class="fw-bold"><%= item.user.nama %></div>
                                                    <small class="text-muted">
                                                        @<%= item.user.username %> | <%= item.user.email %>
                                                    </small>
                                                </div>
                                            </div>
                                        </td>
                                        <td>
                                            <div class="d-flex align-items-center">
                                                <% if (item.alat.foto) { %>
                                                    <img src="<%= item.alat.foto %>" alt="Foto Alat" class="rounded me-2" style="width: 40px; height: 40px; object-fit: cover;">
                                                <% } else { %>
                                                    <div class="bg-secondary rounded me-2" style="width: 40px; height: 40px; display: flex; align-items: center; justify-content: center;">
                                                        <i class="fas fa-box text-white"></i>
                                                    </div>
                                                <% } %>
                                                <div>
                                                    <div class="fw-bold"><%= item.alat.nama_alat %></div>
                                                    <small class="text-muted">
                                                        Kategori: <%= item.alat.kategori ? item.alat.kategori.nama_kategori : 'Tidak ada kategori' %>
                                                    </small>
                                                </div>
                                            </div>
                                        </td>
                                        <td>
                                            <div class="text-nowrap">
                                                <%= new Date(item.tanggal_pinjam).toLocaleDateString('id-ID') %>
                                                <br>
                                                <small class="text-muted"><%= new Date(item.tanggal_pinjam).toLocaleTimeString('id-ID') %></small>
                                            </div>
                                        </td>
                                        <td>
                                            <div class="text-nowrap">
                                                <%= new Date(item.tanggal_kembali).toLocaleDateString('id-ID') %>
                                                <br>
                                                <small class="text-muted"><%= new Date(item.tanggal_kembali).toLocaleTimeString('id-ID') %></small>
                                            </div>
                                        </td>
                                        <td>
                                            <% if (item.status === 'pending') { %>
                                                <span class="badge bg-warning">
                                                    <i class="fas fa-clock"></i> Menunggu Persetujuan
                                                </span>
                                            <% } else if (item.status === 'disetujui') { %>
                                                <span class="badge bg-info">
                                                    <i class="fas fa-check-circle"></i> Disetujui
                                                </span>
                                            <% } else if (item.status === 'dipinjam') { %>
                                                <span class="badge bg-primary">
                                                    <i class="fas fa-handshake"></i> Sedang Dipinjam
                                                </span>
                                            <% } else if (item.status === 'dikembalikan') { %>
                                                <span class="badge bg-success">
                                                    <i class="fas fa-undo"></i> Dikembalikan
                                                </span>
                                            <% } else if (item.status === 'ditolak') { %>
                                                <span class="badge bg-danger">
                                                    <i class="fas fa-times-circle"></i> Ditolak
                                                </span>
                                            <% } %>
                                        </td>
                                        <td>
                                            <div class="btn-group-vertical" role="group">
                                                <% if (item.status === 'pending') { %>
                                                    <form action="/petugas/setujui/<%= item.id %>" method="post" class="d-inline">
                                                        <button type="submit" class="btn btn-sm btn-success" title="Setujui" onclick="return confirm('Setujui peminjaman alat ini?')">
                                                            <i class="fas fa-check"></i> Setujui
                                                        </button>
                                                    </form>
                                                    <form action="/petugas/tolak/<%= item.id %>" method="post" class="d-inline">
                                                        <button type="submit" class="btn btn-sm btn-danger" title="Tolak" onclick="return confirm('Tolak peminjaman alat ini?')">
                                                            <i class="fas fa-times"></i> Tolak
                                                        </button>
                                                    </form>
                                                <% } else if (item.status === 'dipinjam') { %>
                                                    <form action="/petugas/kembali/<%= item.id %>" method="post" class="d-inline">
                                                        <button type="submit" class="btn btn-sm btn-info" title="Kembalikan" onclick="return confirm('Konfirmasi pengembalian alat ini?')">
                                                            <i class="fas fa-undo"></i> Kembalikan
                                                        </button>
                                                    </form>
                                                <% } else { %>
                                                    <button class="btn btn-sm btn-secondary" disabled title="Tidak ada aksi">
                                                        <i class="fas fa-ban"></i> Selesai
                                                    </button>
                                                <% } %>
                                            </div>
                                        </td>
                                    </tr>
                                <% }); %>
                            <% } else { %>
                                <tr>
                                    <td colspan="7" class="text-center py-5">
                                        <div class="alert alert-info mb-0">
                                            <i class="fas fa-info-circle"></i> Tidak ada peminjaman yang perlu diproses.
                                        </div>
                                    </td>
                                </tr>
                            <% } %>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="row mt-4">
    <div class="col-12">
        <div class="card">
            <div class="card-header">
                <h6 class="mb-0"><i class="fas fa-bolt"></i> Quick Actions</h6>
            </div>
            <div class="card-body">

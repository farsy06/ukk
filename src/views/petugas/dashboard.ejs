<div class="row">
    <div class="col-12">
        <div class="d-flex justify-content-between align-items-center">
            <div>
                <h2>Dashboard Petugas</h2>
                <p class="text-muted mb-0">Kelola pengajuan peminjaman alat dari peminjam.</p>
            </div>
            <div class="text-end">
                <div class="badge bg-warning">
                    <i class="fas fa-user-tie"></i> Petugas
                </div>
                <div class="text-muted small">
                    <i class="fas fa-clock"></i> 
                    <%= new Date().toLocaleDateString('id-ID', { 
                        weekday: 'long', 
                        year: 'numeric', 
                        month: 'long', 
                        day: 'numeric' 
                    }) %>
                </div>
            </div>
        </div>
    </div>
</div>

<%
    const parsedPeminjaman = (() => {
        if (typeof peminjaman === 'string') {
            try {
                return JSON.parse(peminjaman);
            } catch (_err) {
                return [];
            }
        }
        return peminjaman;
    })();
    const peminjamanList = Array.isArray(parsedPeminjaman)
        ? parsedPeminjaman
        : (parsedPeminjaman && Array.isArray(parsedPeminjaman.rows))
            ? parsedPeminjaman.rows
            : [];
    const normalizeStatus = (status) =>
        typeof status === 'string' ? status.toLowerCase().trim() : '';
    const pendingCount = peminjamanList.filter(p => normalizeStatus(p.status) === 'pending').length;
    const disetujuiCount = peminjamanList.filter(p => normalizeStatus(p.status) === 'disetujui').length;
    const dipinjamCount = peminjamanList.filter(p => normalizeStatus(p.status) === 'dipinjam').length;
    const dikembalikanCount = peminjamanList.filter(p => normalizeStatus(p.status) === 'dikembalikan').length;
    const totalCount = peminjamanList.length;
%>

<div class="row mt-4">
    <div class="col-md-3">
        <div class="card border-info">
            <div class="card-body">
                <div class="d-flex justify-content-between">
                    <div>
                        <h6 class="card-title text-info">Pengajuan Baru</h6>
                        <p class="card-text text-muted">Menunggu persetujuan</p>
                    </div>
                    <div class="align-self-center">
                        <i class="fas fa-clock fa-2x text-info"></i>
                    </div>
                </div>
                <div class="d-flex justify-content-between align-items-center mt-3">
                    <span class="badge bg-info">Pending</span>
                    <span class="badge bg-primary">Jumlah: 
                        <%= pendingCount %>
                    </span>
                </div>
            </div>
        </div>
    </div>

    <div class="col-md-3">
        <div class="card border-success">
            <div class="card-body">
                <div class="d-flex justify-content-between">
                    <div>
                        <h6 class="card-title text-success">Disetujui</h6>
                        <p class="card-text text-muted">Sudah disetujui</p>
                    </div>
                    <div class="align-self-center">
                        <i class="fas fa-check-circle fa-2x text-success"></i>
                    </div>
                </div>
                <div class="d-flex justify-content-between align-items-center mt-3">
                    <span class="badge bg-success">Approved</span>
                    <span class="badge bg-success">Jumlah: 
                        <%= disetujuiCount %>
                    </span>
                </div>
            </div>
        </div>
    </div>

    <div class="col-md-3">
        <div class="card border-primary">
            <div class="card-body">
                <div class="d-flex justify-content-between">
                    <div>
                        <h6 class="card-title text-primary">Sedang Dipinjam</h6>
                        <p class="card-text text-muted">Dalam masa peminjaman</p>
                    </div>
                    <div class="align-self-center">
                        <i class="fas fa-handshake fa-2x text-primary"></i>
                    </div>
                </div>
                <div class="d-flex justify-content-between align-items-center mt-3">
                    <span class="badge bg-primary">Dipinjam</span>
                    <span class="badge bg-primary">Jumlah: 
                        <%= dipinjamCount %>
                    </span>
                </div>
            </div>
        </div>
    </div>

    <div class="col-md-3">
        <div class="card border-secondary">
            <div class="card-body">
                <div class="d-flex justify-content-between">
                    <div>
                        <h6 class="card-title text-secondary">Dikembalikan</h6>
                        <p class="card-text text-muted">Sudah dikembalikan</p>
                    </div>
                    <div class="align-self-center">
                        <i class="fas fa-undo fa-2x text-secondary"></i>
                    </div>
                </div>
                <div class="d-flex justify-content-between align-items-center mt-3">
                    <span class="badge bg-secondary">Selesai</span>
                    <span class="badge bg-secondary">Jumlah: 
                        <%= dikembalikanCount %>
                    </span>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="row mt-4">
    <div class="col-12">
        <div class="card">
            <div class="card-header">
                <h6 class="mb-0"><i class="fas fa-list"></i> Daftar Peminjaman</h6>
            </div>
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center mb-3">
                    <div class="d-flex gap-2">
                        <div class="input-group" style="width: 300px;">
                            <input type="text" class="form-control" id="searchInput" placeholder="Cari peminjaman...">
                            <button class="btn btn-outline-secondary" type="button" id="clearSearch">
                                <i class="fas fa-times"></i>
                            </button>
                        </div>
                    </div>
                    <div>
                        <span class="badge bg-info">Total: 
                            <%= totalCount %>
                        </span>
                    </div>
                </div>

                <div class="table-responsive">
                    <table class="table table-striped table-hover" id="peminjamanTable">
                        <thead class="table-dark">
                            <tr>
                                <th>No</th>
                                <th>Peminjam</th>
                                <th>Alat</th>
                                <th>Jumlah</th>
                                <th>Tanggal Pinjam</th>
                                <th>Tanggal Kembali</th>
                                <th>Status</th>
                                <th>Keterlambatan</th>
                                <th>Denda</th>
                                <th>Aksi</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% if (peminjamanList.length > 0) { %>
                                <% peminjamanList.forEach(function(item, index) { %>
                                    <% 
                                        const isOverdue = typeof item.isOverdue === 'function' 
                                            ? item.isOverdue() 
                                            : !!item.is_overdue;
                                        const daysOverdue = typeof item.getDaysOverdue === 'function' 
                                            ? item.getDaysOverdue() 
                                            : (item.days_overdue || 0);
                                        const fineAmount = typeof item.calculateFine === 'function' 
                                            ? item.calculateFine() 
                                            : (item.fine_amount || 0);
                                    %>
                                    <tr data-id="<%= item.id %>" data-peminjam="<%= item.user.nama %>" data-alat="<%= item.alat.nama_alat %>" data-status="<%= item.status %>">
                                        <td><%= index + 1 %></td>
                                        <td>
                                            <div class="d-flex align-items-center">
                                                <div class="bg-info rounded-circle me-2" style="width: 40px; height: 40px; display: flex; align-items: center; justify-content: center;">
                                                    <i class="fas fa-user text-white"></i>
                                                </div>
                                                <div>
                                                    <div class="fw-bold"><%= item.user.nama %></div>
                                                    <small class="text-muted">
                                                        @<%= item.user.username %> | <%= item.user.email %>
                                                    </small>
                                                </div>
                                            </div>
                                        </td>
                                        <td>
                                            <div class="d-flex align-items-center">
                                                <% if (item.alat.foto) { %>
                                                    <img src="<%= item.alat.foto %>" alt="Foto Alat" class="rounded me-2" style="width: 40px; height: 40px; object-fit: cover;">
                                                <% } else { %>
                                                    <div class="bg-secondary rounded me-2" style="width: 40px; height: 40px; display: flex; align-items: center; justify-content: center;">
                                                        <i class="fas fa-box text-white"></i>
                                                    </div>
                                                <% } %>
                                                <div>
                                                    <div class="fw-bold"><%= item.alat.nama_alat %></div>
                                                    <small class="text-muted">
                                                        Kategori: <%= item.alat.kategori ? item.alat.kategori.nama_kategori : 'Tidak ada kategori' %>
                                                    </small>
                                                </div>
                                            </div>
                                        </td>
                                        <td>
                                            <span class="badge bg-secondary">
                                                <%= item.jumlah || 1 %>
                                            </span>
                                        </td>
                                        <td>
                                            <%= new Date(item.tanggal_pinjam).toLocaleDateString('id-ID', { day: 'numeric', month: 'short', year: 'numeric' }) %>
                                        </td>
                                        <td>
                                            <%= new Date(item.tanggal_kembali).toLocaleDateString('id-ID', { day: 'numeric', month: 'short', year: 'numeric' }) %>
                                        </td>
                                        <td>
                                            <% if (item.status === 'pending') { %>
                                                <span class="badge bg-warning">
                                                    <i class="fas fa-clock"></i> Menunggu Persetujuan
                                                </span>
                                            <% } else if (item.status === 'disetujui') { %>
                                                <span class="badge bg-info">
                                                    <i class="fas fa-check-circle"></i> Disetujui
                                                </span>
                                            <% } else if (item.status === 'dipinjam') { %>
                                                <span class="badge bg-primary">
                                                    <i class="fas fa-handshake"></i> Sedang Dipinjam
                                                </span>
                                            <% } else if (item.status === 'dikembalikan') { %>
                                                <span class="badge bg-success">
                                                    <i class="fas fa-undo"></i> Dikembalikan
                                                </span>
                                            <% } else if (item.status === 'ditolak') { %>
                                                <span class="badge bg-danger">
                                                    <i class="fas fa-times-circle"></i> Ditolak
                                                </span>
                                            <% } %>
                                        </td>
                                        <td>
                                            <% if (isOverdue) { %>
                                                <span class="badge bg-danger">
                                                    <i class="fas fa-exclamation-triangle"></i> Terlambat <%= daysOverdue %> hari
                                                </span>
                                            <% } else { %>
                                                <span class="text-muted fst-italic">-</span>
                                            <% } %>
                                        </td>
                                        <td>
                                            <% if (isOverdue) { %>
                                                <span class="badge bg-light text-dark">
                                                    Rp <%= new Intl.NumberFormat('id-ID').format(fineAmount) %>
                                                </span>
                                            <% } else { %>
                                                <span class="text-muted fst-italic">-</span>
                                            <% } %>
                                        </td>
                                        <td>
                                            <div class="btn-group-vertical" role="group">
                                                <% if (item.status === 'pending') { %>
                                                    <form action="/petugas/setujui/<%= item.id %>" method="post" class="d-inline" data-confirm="Setujui peminjaman alat ini?">
                                                        <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                                                        <button type="submit" class="btn btn-sm btn-success" title="Setujui">
                                                            <i class="fas fa-check"></i> Setujui
                                                        </button>
                                                    </form>
                                                    <form action="/petugas/tolak/<%= item.id %>" method="post" class="d-inline" data-confirm="Tolak peminjaman alat ini?">
                                                        <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                                                        <button type="submit" class="btn btn-sm btn-danger" title="Tolak">
                                                            <i class="fas fa-times"></i> Tolak
                                                        </button>
                                                    </form>
                                                <% } else if (item.status === 'disetujui' || item.status === 'dipinjam') { %>
                                                    <form action="/petugas/kembali/<%= item.id %>" method="post" class="d-inline" data-confirm="Konfirmasi pengembalian alat ini?">
                                                        <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                                                        <button type="submit" class="btn btn-sm btn-info" title="Kembalikan">
                                                            <i class="fas fa-undo"></i> Kembalikan
                                                        </button>
                                                    </form>
                                                <% } else { %>
                                                    <button class="btn btn-sm btn-secondary" disabled title="Tidak ada aksi">
                                                        <i class="fas fa-ban"></i> Selesai
                                                    </button>
                                                <% } %>
                                            </div>
                                        </td>
                                    </tr>
                                <% }); %>
                            <% } else { %>
                                <tr>
                                    <td colspan="10" class="text-center py-5">
                                        <div class="alert alert-info mb-0">
                                            <i class="fas fa-info-circle"></i> Tidak ada peminjaman yang perlu diproses.
                                        </div>
                                    </td>
                                </tr>
                            <% } %>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="row mt-4">
    <div class="col-12">
        <div class="card">
            <div class="card-header">
                <h6 class="mb-0"><i class="fas fa-bolt"></i> Quick Actions</h6>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-3">
                        <a href="/laporan" class="btn btn-primary w-100 mb-2">
                            <i class="fas fa-chart-bar"></i> Generate Laporan
                        </a>
                    </div>
                    <div class="col-md-3">
                        <a href="/laporan/alat" class="btn btn-success w-100 mb-2">
                            <i class="fas fa-tools"></i> Kelola Alat
                        </a>
                    </div>
                    <div class="col-md-3">
                        <a href="/laporan/peminjaman" class="btn btn-info w-100 mb-2">
                            <i class="fas fa-list"></i> Lihat Semua Peminjaman
                        </a>
                    </div>
                    <div class="col-md-3">
                        <a href="/laporan/aktivitas" class="btn btn-secondary w-100 mb-2">
                            <i class="fas fa-history"></i> Log Aktivitas
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="row mt-4">
    <div class="col-md-6">
        <div class="card">
            <div class="card-header">
                <h6 class="mb-0"><i class="fas fa-chart-pie"></i> Statistik Peminjaman</h6>
            </div>
            <div class="card-body">
                <div class="row text-center">
                    <div class="col-md-3">
                        <div class="text-warning">
                            <i class="fas fa-clock fa-2x"></i>
                            <h6 class="mt-2"><%= pendingCount %></h6>
                            <small class="text-muted">Pending</small>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="text-info">
                            <i class="fas fa-check-circle fa-2x"></i>
                            <h6 class="mt-2"><%= disetujuiCount %></h6>
                            <small class="text-muted">Disetujui</small>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="text-primary">
                            <i class="fas fa-handshake fa-2x"></i>
                            <h6 class="mt-2"><%= dipinjamCount %></h6>
                            <small class="text-muted">Dipinjam</small>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="text-success">
                            <i class="fas fa-undo fa-2x"></i>
                            <h6 class="mt-2"><%= dikembalikanCount %></h6>
                            <small class="text-muted">Selesai</small>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-6">
        <div class="card">
            <div class="card-header">
                <h6 class="mb-0"><i class="fas fa-user-clock"></i> Informasi Petugas</h6>
            </div>
            <div class="card-body">
                <div class="text-muted small">
                    <i class="fas fa-user"></i> Nama: <strong><%= user.nama %></strong>
                </div>
                <div class="text-muted small mt-2">
                    <i class="fas fa-envelope"></i> Email: <strong><%= user.email %></strong>
                </div>
                <div class="text-muted small mt-2">
                    <i class="fas fa-clock"></i> Terakhir login: 
                    <%= user.last_login ? new Date(user.last_login).toLocaleDateString('id-ID', { day: 'numeric', month: 'short', year: 'numeric' }) : 'Belum pernah' %>
                </div>
                <div class="text-muted small mt-2">
                    <i class="fas fa-user-shield"></i> Role: 
                    <span class="badge bg-warning"><%= user.role %></span>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    document.addEventListener('DOMContentLoaded', function() {
        const searchInput = document.getElementById('searchInput');
        const clearSearch = document.getElementById('clearSearch');
        const table = document.getElementById('peminjamanTable');
        const rows = table.querySelectorAll('tbody tr');

        // Search functionality
        if (searchInput) {
            searchInput.addEventListener('input', function() {
                const searchTerm = this.value.toLowerCase().trim();
                
                rows.forEach(row => {
                    const peminjam = row.getAttribute('data-peminjam').toLowerCase();
                    const alat = row.getAttribute('data-alat').toLowerCase();
                    const status = row.getAttribute('data-status').toLowerCase();
                    
                    const matches = peminjam.includes(searchTerm) || 
                                   alat.includes(searchTerm) || 
                                   status.includes(searchTerm);
                    
                    row.style.display = matches ? '' : 'none';
                });
            });
        }

        // Clear search functionality
        if (clearSearch) {
            clearSearch.addEventListener('click', function() {
                searchInput.value = '';
                searchInput.dispatchEvent(new Event('input'));
            });
        }

        // Add hover effects for better UX
        rows.forEach(row => {
            row.addEventListener('mouseenter', function() {
                this.style.backgroundColor = '#f8f9fa';
            });
            
            row.addEventListener('mouseleave', function() {
                this.style.backgroundColor = '';
            });
        });

        // Add keyboard navigation
        document.addEventListener('keydown', function(e) {
            if (e.key === 'Escape' && searchInput.value) {
                searchInput.value = '';
                searchInput.dispatchEvent(new Event('input'));
            }
        });

        // Add confirm + loading state for actions on submit
        const actionForms = document.querySelectorAll('.btn-group-vertical form');
        actionForms.forEach(form => {
            form.addEventListener('submit', function(e) {
                const message = this.getAttribute('data-confirm');
                if (message && !confirm(message)) {
                    e.preventDefault();
                    return;
                }

                const submitButton = this.querySelector('button[type="submit"]');
                if (submitButton) {
                    submitButton.innerHTML = '<i class="fas fa-spinner fa-spin"></i> Memproses...';
                    submitButton.disabled = true;
                }
            });
        });
    });
</script>

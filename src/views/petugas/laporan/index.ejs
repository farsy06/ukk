<div class="row">
    <div class="col-12">
        <div class="d-flex justify-content-between align-items-center">
            <div>
                <h2><i class="fas fa-chart-bar"></i> Laporan Petugas</h2>
                <p class="text-muted mb-0">Laporan terbatas untuk petugas</p>
            </div>
            <div class="text-end">
                <div class="badge bg-warning">
                    <i class="fas fa-user-tie"></i> Petugas
                </div>
                <div class="text-muted small">
                    <i class="fas fa-clock"></i> 
                    <%= new Date().toLocaleDateString('id-ID', { 
                        weekday: 'long', 
                        year: 'numeric', 
                        month: 'long', 
                        day: 'numeric' 
                    }) %>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="row mt-4">
    <div class="col-md-4">
        <div class="card border-info">
            <div class="card-body">
                <div class="d-flex justify-content-between">
                    <div>
                        <h6 class="card-title text-info">Peminjaman</h6>
                        <p class="card-text text-muted">Laporan peminjaman alat</p>
                    </div>
                    <div class="align-self-center">
                        <i class="fas fa-hand-holding fa-2x text-info"></i>
                    </div>
                </div>
                <div class="d-flex justify-content-between align-items-center mt-3">
                    <span class="badge bg-info">Terbatas</span>
                    <div class="btn-group" role="group">
                        <a href="<%= reportBasePath %>/peminjaman" class="btn btn-info btn-sm">
                            <i class="fas fa-eye"></i> Lihat
                        </a>
                        <a href="<%= reportBasePath %>/peminjaman?format=pdf" class="btn btn-outline-info btn-sm">
                            <i class="fas fa-file-pdf"></i>
                        </a>
                        <a href="<%= reportBasePath %>/peminjaman?format=excel" class="btn btn-outline-info btn-sm">
                            <i class="fas fa-file-excel"></i>
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="col-md-4">
        <div class="card border-primary">
            <div class="card-body">
                <div class="d-flex justify-content-between">
                    <div>
                        <h6 class="card-title text-primary">Statistik</h6>
                        <p class="card-text text-muted">Statistik aktivitas</p>
                    </div>
                    <div class="align-self-center">
                        <i class="fas fa-chart-line fa-2x text-primary"></i>
                    </div>
                </div>
                <div class="d-flex justify-content-between align-items-center mt-3">
                    <span class="badge bg-primary">Ringkasan</span>
                    <div class="btn-group" role="group">
                        <a href="<%= reportBasePath %>/statistik" class="btn btn-primary btn-sm">
                            <i class="fas fa-eye"></i> Lihat
                        </a>
                        <a href="<%= reportBasePath %>/statistik?format=pdf" class="btn btn-outline-primary btn-sm">
                            <i class="fas fa-file-pdf"></i>
                        </a>
                        <a href="<%= reportBasePath %>/statistik?format=excel" class="btn btn-outline-primary btn-sm">
                            <i class="fas fa-file-excel"></i>
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="col-md-4">
        <div class="card border-secondary">
            <div class="card-body">
                <div class="d-flex justify-content-between">
                    <div>
                        <h6 class="card-title text-secondary">Aktivitas</h6>
                        <p class="card-text text-muted">Log aktivitas sistem</p>
                    </div>
                    <div class="align-self-center">
                        <i class="fas fa-history fa-2x text-secondary"></i>
                    </div>
                </div>
                <div class="d-flex justify-content-between align-items-center mt-3">
                    <span class="badge bg-secondary">Audit Trail</span>
                    <div class="btn-group" role="group">
                        <a href="<%= reportBasePath %>/aktivitas" class="btn btn-secondary btn-sm">
                            <i class="fas fa-eye"></i> Lihat
                        </a>
                        <a href="<%= reportBasePath %>/aktivitas?format=pdf" class="btn btn-outline-secondary btn-sm">
                            <i class="fas fa-file-pdf"></i>
                        </a>
                        <a href="<%= reportBasePath %>/aktivitas?format=excel" class="btn btn-outline-secondary btn-sm">
                            <i class="fas fa-file-excel"></i>
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="row mt-4">
    <div class="col-12">
        <div class="card">
            <div class="card-header">
                <h6 class="mb-0"><i class="fas fa-bolt"></i> Quick Actions</h6>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-3">
                        <a href="<%= reportBasePath %>/peminjaman" class="btn btn-info w-100 mb-2">
                            <i class="fas fa-hand-holding"></i> Laporan Peminjaman
                        </a>
                    </div>
                    <div class="col-md-3">
                        <a href="<%= reportBasePath %>/statistik" class="btn btn-primary w-100 mb-2">
                            <i class="fas fa-chart-line"></i> Statistik Sistem
                        </a>
                    </div>
                    <div class="col-md-3">
                        <a href="<%= reportBasePath %>/aktivitas" class="btn btn-secondary w-100 mb-2">
                            <i class="fas fa-history"></i> Log Aktivitas
                        </a>
                    </div>
                    <div class="col-md-3">
                        <a href="/petugas" class="btn btn-warning w-100 mb-2">
                            <i class="fas fa-arrow-left"></i> Kembali ke Dashboard
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    document.addEventListener('DOMContentLoaded', function() {
        // Add hover effects to cards
        const cards = document.querySelectorAll('.card');
        cards.forEach(card => {
            card.addEventListener('mouseenter', function() {
                this.style.transform = 'translateY(-2px)';
                this.style.transition = 'transform 0.3s ease';
            });
            
            card.addEventListener('mouseleave', function() {
                this.style.transform = 'translateY(0)';
            });
        });

        // Add loading animation to buttons
        const actionButtons = document.querySelectorAll('.btn-info, .btn-primary, .btn-secondary, .btn-warning');
        actionButtons.forEach(button => {
            button.addEventListener('click', function(e) {
                const originalText = this.innerHTML;
                this.innerHTML = '<i class="fas fa-spinner fa-spin"></i> Memuat...';
                this.disabled = true;
                
                setTimeout(() => {
                    this.innerHTML = originalText;
                    this.disabled = false;
                }, 1000);
            });
        });
    });
</script>

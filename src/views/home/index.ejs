<!-- Hero Section -->
<div class="hero-section bg-primary text-white py-5">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-8">
                <h1 class="display-4 fw-bold mb-3">Selamat Datang di ToolShare Pro</h1>
                <p class="lead mb-4">
                    Platform modern untuk berbagi dan meminjam alat dengan mudah dan efisien.
                    Kelola inventori alat, pantau peminjaman, dan tingkatkan produktivitas Anda.
                </p>
                <% if (typeof user === 'undefined' || !user) { %>
                    <div class="d-flex gap-3">
                        <a href="/register" class="btn btn-light btn-lg">
                            <i class="fas fa-user-plus"></i> Daftar Sekarang
                        </a>
                        <a href="/login" class="btn btn-outline-light btn-lg">
                            <i class="fas fa-sign-in-alt"></i> Masuk
                        </a>
                    </div>
                <% } else { %>
                    <% if (user.role === 'peminjam') { %>
                        <a href="/alat" class="btn btn-light btn-lg">
                            <i class="fas fa-tools"></i> Lihat Alat Tersedia
                        </a>
                    <% } else if (user.role === 'petugas') { %>
                        <a href="/petugas" class="btn btn-light btn-lg">
                            <i class="fas fa-tasks"></i> Dashboard Petugas
                        </a>
                    <% } else if (user.role === 'admin') { %>
                        <a href="/admin" class="btn btn-light btn-lg">
                            <i class="fas fa-cog"></i> Dashboard Admin
                        </a>
                    <% } %>
                <% } %>
            </div>
            <div class="col-lg-4 text-center">
                <img src="/images/tools-illustration.png" alt="Tools Illustration" class="img-fluid rounded shadow" style="max-height: 300px;" onerror="this.style.display='none'; this.nextElementSibling.style.display='block';" />
                <i class="fas fa-tools fa-6x text-primary opacity-50" style="display: none;"></i>
            </div>
        </div>
    </div>
</div>

<!-- Statistics Section -->
<div class="container my-5">
    <div class="row text-center">
        <div class="col-md-4">
            <div class="card h-100 border-0 shadow-sm">
                <div class="card-body">
                    <div class="display-4 text-primary mb-2">
                        <i class="fas fa-tools"></i>
                    </div>
                    <h3 class="h2 mb-1"><%= totalAlatTersedia %></h3>
                    <p class="text-muted mb-0">Alat Tersedia</p>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card h-100 border-0 shadow-sm">
                <div class="card-body">
                    <div class="display-4 text-success mb-2">
                        <i class="fas fa-tags"></i>
                    </div>
                    <h3 class="h2 mb-1"><%= totalKategori %></h3>
                    <p class="text-muted mb-0">Kategori Alat</p>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card h-100 border-0 shadow-sm">
                <div class="card-body">
                    <div class="display-4 text-info mb-2">
                        <i class="fas fa-users"></i>
                    </div>
                    <h3 class="h2 mb-1">3</h3>
                    <p class="text-muted mb-0">Tipe Pengguna</p>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Featured Tools Section -->
<% if (typeof alat !== 'undefined' && alat && alat.length > 0) { %>
<div class="bg-light py-5">
    <div class="container">
        <div class="row mb-4">
            <div class="col-12 text-center">
                <h2 class="mb-3">Alat Tersedia</h2>
                <p class="text-muted">Beberapa alat yang bisa Anda pinjam saat ini</p>
            </div>
        </div>

        <div class="row">
            <% alat.forEach(function(item) { %>
                <div class="col-lg-4 col-md-6 mb-4">
                    <div class="card h-100 border-0 shadow-sm">
                        <div class="card-body">
                            <div class="d-flex align-items-center mb-3">
                                <div class="flex-shrink-0">
                                    <div class="bg-primary text-white rounded-circle d-flex align-items-center justify-content-center" style="width: 50px; height: 50px;">
                                        <i class="fas fa-wrench fa-lg"></i>
                                    </div>
                                </div>
                                <div class="flex-grow-1 ms-3">
                                    <h5 class="card-title mb-1"><%= item.nama_alat %></h5>
                                    <small class="text-muted">
                                        Kategori: <%= item.kategori ? item.kategori.nama_kategori : 'Tidak ada kategori' %>
                                    </small>
                                </div>
                            </div>

                            <div class="mb-3">
                                <span class="badge bg-success me-2">
                                    <i class="fas fa-check-circle"></i> Tersedia
                                </span>
                                <span class="badge bg-info">
                                    Kondisi: <%= item.kondisi === 'baik' ? 'Baik' : item.kondisi === 'rusak_ringan' ? 'Rusak Ringan' : 'Rusak Berat' %>
                                </span>
                            </div>

                            <% if (typeof user !== 'undefined' && user && user.role === 'peminjam') { %>
                                <a href="/peminjaman/ajukan/<%= item.id %>" class="btn btn-primary w-100">
                                    <i class="fas fa-hand-holding"></i> Ajukan Peminjaman
                                </a>
                            <% } else if (typeof user === 'undefined' || !user) { %>
                                <a href="/login" class="btn btn-outline-primary w-100">
                                    <i class="fas fa-sign-in-alt"></i> Login untuk Meminjam
                                </a>
                            <% } %>
                        </div>
                    </div>
                </div>
            <% }); %>
        </div>

        <div class="text-center mt-4">
            <% if (typeof user !== 'undefined' && user && user.role === 'peminjam') { %>
                <a href="/alat" class="btn btn-outline-primary btn-lg">
                    <i class="fas fa-list"></i> Lihat Semua Alat
                </a>
            <% } else { %>
                <a href="/register" class="btn btn-primary btn-lg">
                    <i class="fas fa-user-plus"></i> Daftar untuk Melihat Semua Alat
                </a>
            <% } %>
        </div>
    </div>
</div>
<% } %>


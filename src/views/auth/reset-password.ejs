<section class="auth-layout">
    <aside class="auth-aside auth-aside--register">
        <div class="auth-aside-inner">
            <div class="auth-aside-top">
                <span class="auth-aside-tag">Atur Password Baru</span>
                <h2 class="auth-aside-heading">Buat password baru yang aman</h2>
                <p class="auth-aside-desc">
                    Password baru akan langsung menggantikan password lama dan sesi remember me akan dinonaktifkan.
                </p>
            </div>
            <ul class="auth-aside-list">
                <li><i class="fas fa-lock"></i>Minimal 8 karakter</li>
                <li><i class="fas fa-font"></i>Gunakan huruf besar, kecil, angka, dan simbol</li>
                <li><i class="fas fa-shield-halved"></i>Token reset hanya berlaku sementara</li>
            </ul>
        </div>
    </aside>

    <section class="auth-form-wrap">
        <div class="auth-form-card">
            <div class="auth-form-header">
                <div class="auth-form-icon auth-form-icon--success">
                    <i class="fas fa-unlock-keyhole"></i>
                </div>
                <div>
                    <h4 class="auth-form-title">Reset Password</h4>
                    <p class="auth-form-subtitle">Masukkan password baru untuk akun Anda.</p>
                </div>
            </div>

            <form action="/reset-password/<%= token %>" method="POST" id="resetPasswordForm" novalidate class="auth-form-body">
                <input type="hidden" name="_csrf" value="<%= csrfToken %>">

                <div class="auth-field-row">
                    <div class="auth-field">
                        <label for="password" class="auth-label">Password Baru <span class="auth-required">*</span></label>
                        <div class="auth-input-group">
                            <span class="auth-input-icon"><i class="fas fa-lock"></i></span>
                            <input
                                type="password"
                                class="auth-input"
                                id="password"
                                name="password"
                                autocomplete="new-password"
                                required
                            >
                            <button class="auth-input-toggle" type="button" id="togglePassword" aria-label="Tampilkan password baru">
                                <i class="fas fa-eye"></i>
                            </button>
                        </div>
                    </div>

                    <div class="auth-field">
                        <label for="confirmPassword" class="auth-label">Konfirmasi Password <span class="auth-required">*</span></label>
                        <div class="auth-input-group">
                            <span class="auth-input-icon"><i class="fas fa-lock"></i></span>
                            <input
                                type="password"
                                class="auth-input"
                                id="confirmPassword"
                                name="confirmPassword"
                                autocomplete="new-password"
                                required
                            >
                            <button class="auth-input-toggle" type="button" id="toggleConfirmPassword" aria-label="Tampilkan konfirmasi password">
                                <i class="fas fa-eye"></i>
                            </button>
                        </div>
                        <div id="password-match-message" class="auth-hint"></div>
                    </div>
                </div>

                <div class="auth-criteria-box auth-password-box">
                    <div class="auth-criteria-title">Kriteria Password</div>
                    <ul class="auth-criteria-list">
                        <li id="length-check" class="text-danger"><i class="fas fa-times"></i>Minimal 8 karakter</li>
                        <li id="uppercase-check" class="text-danger"><i class="fas fa-times"></i>Mengandung huruf besar (A-Z)</li>
                        <li id="lowercase-check" class="text-danger"><i class="fas fa-times"></i>Mengandung huruf kecil (a-z)</li>
                        <li id="number-check" class="text-danger"><i class="fas fa-times"></i>Mengandung angka (0-9)</li>
                        <li id="special-check" class="text-danger"><i class="fas fa-times"></i>Mengandung karakter spesial (!@#$%^&*)</li>
                    </ul>
                </div>

                <button type="submit" class="auth-submit auth-submit--success" id="resetPasswordSubmitButton">
                    <i class="fas fa-check me-2"></i>Simpan Password Baru
                </button>
            </form>

            <div class="auth-form-footer">
                <span class="auth-footer-muted">Kembali ke login?</span>
                <a href="/login" class="auth-footer-link">Masuk di sini</a>
            </div>
        </div>
    </section>
</section>

<script src="/js/auth-common.js"></script>
<script src="/js/auth-reset.js"></script>

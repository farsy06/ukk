<section class="auth-layout">
    <aside class="auth-aside auth-aside--login">
        <div class="auth-aside-inner">
            <div class="auth-aside-top">
                <span class="auth-aside-tag">Portal eSarpra</span>
                <h2 class="auth-aside-heading">Masuk untuk kelola peminjaman alat</h2>
                <p class="auth-aside-desc">
                    Pantau status alat, ajukan peminjaman, dan cek riwayat transaksi dalam satu dashboard.
                </p>
            </div>
            <ul class="auth-aside-list">
                <li><i class="fas fa-circle-check"></i>Proses cepat dan terstruktur</li>
                <li><i class="fas fa-circle-check"></i>Keamanan berbasis sesi dan CSRF</li>
                <li><i class="fas fa-circle-check"></i>Riwayat aktivitas tersimpan otomatis</li>
            </ul>
        </div>
    </aside>

    <section class="auth-form-wrap">
        <div class="auth-form-card">
            <div class="auth-form-header">
                <div class="auth-form-icon auth-form-icon--primary">
                    <i class="fas fa-sign-in-alt"></i>
                </div>
                <div>
                    <h4 class="auth-form-title">Login</h4>
                    <p class="auth-form-subtitle">Gunakan akun Anda untuk melanjutkan.</p>
                </div>
            </div>

            <form action="/login" method="POST" id="loginForm" novalidate class="auth-form-body">
                <input type="hidden" name="_csrf" value="<%= csrfToken %>">

                <div class="auth-field">
                    <label for="username" class="auth-label">Username <span class="auth-required">*</span></label>
                    <div class="auth-input-group">
                        <span class="auth-input-icon"><i class="fas fa-user"></i></span>
                        <input
                            type="text"
                            class="auth-input"
                            id="username"
                            name="username"
                            autocomplete="username"
                            required
                        >
                    </div>
                </div>

                <div class="auth-field">
                    <label for="password" class="auth-label">Password <span class="auth-required">*</span></label>
                    <div class="auth-input-group">
                        <span class="auth-input-icon"><i class="fas fa-lock"></i></span>
                        <input
                            type="password"
                            class="auth-input"
                            id="password"
                            name="password"
                            autocomplete="current-password"
                            required
                        >
                        <button class="auth-input-toggle" type="button" id="togglePassword" aria-label="Tampilkan password">
                            <i class="fas fa-eye"></i>
                        </button>
                    </div>
                </div>

                <div class="auth-row-between">
                    <label class="auth-check-label" for="rememberMe">
                        <input class="auth-check" type="checkbox" id="rememberMe" name="rememberMe">
                        <span>Ingat saya</span>
                    </label>
                    <div class="auth-links-stack">
                        <a href="/forgot-password" class="auth-link">Lupa password?</a>
                        <a href="/tos" class="auth-link auth-link--muted">Syarat & ketentuan</a>
                    </div>
                </div>

                <button type="submit" class="auth-submit" id="loginSubmitButton">
                    <i class="fas fa-right-to-bracket me-2"></i>Masuk
                </button>
            </form>

            <div class="auth-form-footer">
                <span class="auth-footer-muted">Belum punya akun?</span>
                <a href="/register" class="auth-footer-link">Daftar sekarang</a>
            </div>
        </div>
    </section>
</section>

<script src="/js/auth-common.js"></script>
<script src="/js/auth-login.js"></script>

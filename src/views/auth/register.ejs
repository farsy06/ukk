<section class="auth-layout">
    <aside class="auth-aside auth-aside--register">
        <div class="auth-aside-inner">
            <div class="auth-aside-top">
                <span class="auth-aside-tag">Buat Akun Baru</span>
                <h2 class="auth-aside-heading">Daftar dan mulai ajukan peminjaman</h2>
                <p class="auth-aside-desc">
                    Akun peminjam memberi akses ke katalog alat, pengajuan pinjam, dan pemantauan status pengembalian.
                </p>
            </div>
            <ul class="auth-aside-list">
                <li><i class="fas fa-user-check"></i>Registrasi cepat dalam satu halaman</li>
                <li><i class="fas fa-shield-halved"></i>Validasi password berlapis</li>
                <li><i class="fas fa-receipt"></i>Riwayat peminjaman terdokumentasi</li>
            </ul>
        </div>
    </aside>

    <section class="auth-form-wrap">
        <div class="auth-form-card">
            <div class="auth-form-header">
                <div class="auth-form-icon auth-form-icon--success">
                    <i class="fas fa-user-plus"></i>
                </div>
                <div>
                    <h4 class="auth-form-title">Daftar Akun</h4>
                    <p class="auth-form-subtitle">Lengkapi data berikut untuk membuat akun peminjam.</p>
                </div>
            </div>

            <form action="/register" method="POST" id="registerForm" novalidate class="auth-form-body">
                <input type="hidden" name="_csrf" value="<%= csrfToken %>">

                <div class="auth-field">
                    <label for="nama" class="auth-label">Nama Lengkap <span class="auth-required">*</span></label>
                    <div class="auth-input-group">
                        <span class="auth-input-icon"><i class="fas fa-id-card"></i></span>
                        <input
                            type="text"
                            class="auth-input"
                            id="nama"
                            name="nama"
                            value="<%= typeof data !== 'undefined' && data ? data.nama : '' %>"
                            autocomplete="name"
                            required
                        >
                    </div>
                </div>

                <div class="auth-field">
                    <label for="username" class="auth-label">Username <span class="auth-required">*</span></label>
                    <div class="auth-input-group">
                        <span class="auth-input-icon"><i class="fas fa-at"></i></span>
                        <input
                            type="text"
                            class="auth-input"
                            id="username"
                            name="username"
                            value="<%= typeof data !== 'undefined' && data ? data.username : '' %>"
                            autocomplete="username"
                            required
                        >
                    </div>
                </div>

                <div class="auth-field">
                    <label for="email" class="auth-label">Email <span class="auth-required">*</span></label>
                    <div class="auth-input-group">
                        <span class="auth-input-icon"><i class="fas fa-envelope"></i></span>
                        <input
                            type="email"
                            class="auth-input"
                            id="email"
                            name="email"
                            value="<%= typeof data !== 'undefined' && data ? data.email : '' %>"
                            autocomplete="email"
                            required
                        >
                    </div>
                </div>

                <div class="auth-field-row">
                    <div class="auth-field">
                        <label for="password" class="auth-label">Password <span class="auth-required">*</span></label>
                        <div class="auth-input-group">
                            <span class="auth-input-icon"><i class="fas fa-lock"></i></span>
                            <input
                                type="password"
                                class="auth-input"
                                id="password"
                                name="password"
                                autocomplete="new-password"
                                required
                            >
                            <button class="auth-input-toggle" type="button" id="togglePassword" aria-label="Tampilkan password">
                                <i class="fas fa-eye"></i>
                            </button>
                        </div>
                    </div>

                    <div class="auth-field">
                        <label for="confirmPassword" class="auth-label">Konfirmasi Password <span class="auth-required">*</span></label>
                        <div class="auth-input-group">
                            <span class="auth-input-icon"><i class="fas fa-lock"></i></span>
                            <input
                                type="password"
                                class="auth-input"
                                id="confirmPassword"
                                name="confirmPassword"
                                autocomplete="new-password"
                                required
                            >
                            <button class="auth-input-toggle" type="button" id="toggleConfirmPassword" aria-label="Tampilkan konfirmasi password">
                                <i class="fas fa-eye"></i>
                            </button>
                        </div>
                        <div id="password-match-message" class="auth-hint"></div>
                    </div>
                </div>

                <div class="auth-criteria-box auth-password-box">
                    <div class="auth-criteria-title">Kriteria Password</div>
                    <ul class="auth-criteria-list">
                        <li id="length-check" class="text-danger"><i class="fas fa-times"></i>Minimal 8 karakter</li>
                        <li id="uppercase-check" class="text-danger"><i class="fas fa-times"></i>Mengandung huruf besar (A-Z)</li>
                        <li id="lowercase-check" class="text-danger"><i class="fas fa-times"></i>Mengandung huruf kecil (a-z)</li>
                        <li id="number-check" class="text-danger"><i class="fas fa-times"></i>Mengandung angka (0-9)</li>
                        <li id="special-check" class="text-danger"><i class="fas fa-times"></i>Mengandung karakter spesial (!@#$%^&*)</li>
                    </ul>
                </div>

                <label class="auth-check-label auth-check-label--block" for="terms">
                    <input class="auth-check" type="checkbox" id="terms" name="terms" required>
                    <span>Saya menyetujui <a href="/tos" class="auth-link">syarat dan ketentuan layanan</a></span>
                </label>

                <button type="submit" class="auth-submit auth-submit--success" id="registerSubmitButton">
                    <i class="fas fa-user-check me-2"></i>Buat Akun
                </button>
            </form>

            <div class="auth-form-footer">
                <span class="auth-footer-muted">Sudah punya akun?</span>
                <a href="/login" class="auth-footer-link">Masuk di sini</a>
            </div>
        </div>
    </section>
</section>

<script src="/js/auth-common.js"></script>
<script src="/js/auth-register.js"></script>

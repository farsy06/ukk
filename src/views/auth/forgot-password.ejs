<section class="auth-layout">
    <aside class="auth-aside auth-aside--login">
        <div class="auth-aside-inner">
            <div class="auth-aside-top">
                <span class="auth-aside-tag">Pemulihan Akun</span>
                <h2 class="auth-aside-heading">Lupa password akun Anda?</h2>
                <p class="auth-aside-desc">
                    Masukkan username atau email akun Anda untuk membuat tautan reset password.
                </p>
            </div>
            <ul class="auth-aside-list">
                <li><i class="fas fa-shield-halved"></i>Tautan reset bersifat sementara</li>
                <li><i class="fas fa-link"></i>Setiap permintaan membuat token baru</li>
                <li><i class="fas fa-user-lock"></i>Informasi akun tetap disamarkan</li>
            </ul>
        </div>
    </aside>

    <section class="auth-form-wrap">
        <div class="auth-form-card">
            <div class="auth-form-header">
                <div class="auth-form-icon auth-form-icon--warning">
                    <i class="fas fa-key"></i>
                </div>
                <div>
                    <h4 class="auth-form-title">Lupa Password</h4>
                    <p class="auth-form-subtitle">Isi data akun untuk memulai reset password.</p>
                </div>
            </div>

            <form action="/forgot-password" method="POST" id="forgotPasswordForm" novalidate class="auth-form-body">
                <input type="hidden" name="_csrf" value="<%= csrfToken %>">

                <div class="auth-field">
                    <label for="identifier" class="auth-label">Username atau Email <span class="auth-required">*</span></label>
                    <div class="auth-input-group">
                        <span class="auth-input-icon"><i class="fas fa-user"></i></span>
                        <input
                            type="text"
                            class="auth-input"
                            id="identifier"
                            name="identifier"
                            value="<%= typeof data !== 'undefined' && data ? data.identifier : '' %>"
                            autocomplete="username"
                            required
                        >
                    </div>
                </div>

                <button type="submit" class="auth-submit auth-submit--warning" id="forgotPasswordSubmitButton">
                    <i class="fas fa-paper-plane me-2"></i>Kirim Tautan Reset
                </button>
            </form>

            <div class="auth-form-footer">
                <span class="auth-footer-muted">Kembali ke halaman login?</span>
                <a href="/login" class="auth-footer-link">Masuk di sini</a>
            </div>
        </div>
    </section>
</section>

<script src="/js/auth-common.js"></script>
<script src="/js/auth-forgot.js"></script>

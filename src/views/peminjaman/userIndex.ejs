<div class="row">
    <div class="col-12">
        <%- include('../_partials/page-head', {
            title: 'Riwayat Peminjaman',
            subtitle: 'Berikut adalah riwayat pengajuan peminjaman alat Anda.',
            actions: '<a href=\"/alat\" class=\"btn btn-primary\"><i class=\"fas fa-plus\"></i> Ajukan Peminjaman</a>'
        }) %>
    </div>
</div>

<div class="row">
    <div class="col-12">
        <div class="card shadow-sm table-card">
            <div class="card-body">
                <% if (typeof peminjaman !== 'undefined' && peminjaman && peminjaman.length > 0) { %>
                        <table class="table table-hover align-middle">
                            <thead class="table-light">
                                <tr>
                                    <th scope="col" class="text-center">#</th>
                                    <th scope="col">Alat</th>
                                    <th scope="col">Periode</th>
                                    <th scope="col">Status</th>
                                    <th scope="col">Late/Fine</th>
                                    <th scope="col" class="table-actions">Aksi</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% peminjaman.forEach(function(item, index) { %>
                                    <% 
                                        const isOverdue = typeof item.isOverdue === 'function' 
                                            ? item.isOverdue() 
                                            : !!item.is_overdue;
                                        const daysOverdue = typeof item.getDaysOverdue === 'function' 
                                            ? item.getDaysOverdue() 
                                            : (item.days_overdue || 0);
                                        const fineAmount = typeof item.calculateFine === 'function' 
                                            ? item.calculateFine() 
                                            : (item.fine_amount || 0);
                                    %>
                                    <tr>
                                        <td class="text-center"><%= index + 1 %></td>
                                        <td class="table-actions">
                                            <div>
                                                <h6 class="mb-1 fw-semibold">
                                                    <%= item.alat ? item.alat.nama_alat : 'Alat tidak ditemukan' %>
                                                </h6>
                                                <small class="text-muted">
                                                    Kategori: <%= item.alat && item.alat.kategori ? item.alat.kategori.nama_kategori : 'Tidak ada kategori' %>
                                                </small>
                                                <small class="text-muted d-block">
                                                    Jumlah: <%= item.jumlah || 1 %>
                                                </small>
                                            </div>
                                        </td>
                                        <td>
                                            <span class="badge bg-light text-dark">
                                                <%= item.tanggal_pinjam ? new Date(item.tanggal_pinjam).toLocaleDateString('id-ID', { day: 'numeric', month: 'short', year: 'numeric' }) : 'Tidak tersedia' %>
                                            </span>
                                            <span class="text-muted">â†’</span>
                                            <span class="badge bg-light text-dark">
                                                <%= item.tanggal_kembali ? new Date(item.tanggal_kembali).toLocaleDateString('id-ID', { day: 'numeric', month: 'short', year: 'numeric' }) : 'Tidak tersedia' %>
                                            </span>
                                            <% if (item.tanggal_pengembalian) { %>
                                                <small class="text-muted d-block mt-1">
                                                    Kembali: <%= new Date(item.tanggal_pengembalian).toLocaleDateString('id-ID', { day: 'numeric', month: 'short', year: 'numeric' }) %>
                                                </small>
                                            <% } %>
                                        </td>
                                        <td>
                                            <% if (item.status === 'pending') { %>
                                                <span class="badge bg-warning">
                                                    <i class="fas fa-clock"></i> Menunggu
                                                </span>
                                            <% } else if (item.status === 'disetujui') { %>
                                                <span class="badge bg-info">
                                                    <i class="fas fa-check-circle"></i> Disetujui
                                                </span>
                                            <% } else if (item.status === 'dipinjam') { %>
                                                <span class="badge bg-primary">
                                                    <i class="fas fa-handshake"></i> Dipinjam
                                                </span>
                                            <% } else if (item.status === 'dikembalikan') { %>
                                                <span class="badge bg-success">
                                                    <i class="fas fa-undo"></i> Kembali
                                                </span>
                                            <% } else if (item.status === 'ditolak') { %>
                                                <span class="badge bg-danger">
                                                    <i class="fas fa-times-circle"></i> Ditolak
                                                </span>
                                            <% } else if (item.status === 'dibatalkan') { %>
                                                <span class="badge bg-secondary">
                                                    <i class="fas fa-ban"></i> Dibatalkan
                                                </span>
                                            <% } else { %>
                                                <span class="badge bg-secondary">
                                                    <i class="fas fa-question-circle"></i> Tidak Diketahui
                                                </span>
                                            <% } %>
                                        </td>
                                        <td>
                                            <% if (isOverdue) { %>
                                                <span class="badge bg-danger">
                                                    <i class="fas fa-exclamation-triangle"></i> <%= daysOverdue %> hari
                                                </span>
                                                <div class="text-muted small mt-1">
                                                    Rp <%= new Intl.NumberFormat('id-ID').format(fineAmount) %>
                                                </div>
                                            <% } else { %>
                                                <span class="text-muted fst-italic">-</span>
                                            <% } %>
                                        </td>
                                        <td>
                                            <% if (item.status === 'pending') { %>
                                                <form action="/peminjaman/batal/<%= item.id %>" method="post" class="d-inline" onsubmit="return confirm('Yakin ingin membatalkan peminjaman ini?');">
                                                    <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                                                    <button type="submit" class="btn btn-sm btn-outline-danger" title="Batalkan">
                                                        <i class="fas fa-times"></i> Batal
                                                    </button>
                                                </form>
                                            <% } else { %>
                                                <span class="text-muted fst-italic">-</span>
                                            <% } %>
                                        </td>
                                    </tr>
                                <% }); %>
                            </tbody>
                        </table>
                <% } else { %>
                    <div class="text-center py-5">
                        <div class="mb-4">
                            <i class="fas fa-history fa-3x text-muted"></i>
                        </div>
                        <h5 class="text-muted mb-2">Belum Ada Riwayat Peminjaman</h5>
                        <p class="text-muted mb-4">Anda belum pernah mengajukan peminjaman alat. Silakan ajukan peminjaman untuk melihat riwayat di sini.</p>
                        <a href="/alat" class="btn btn-primary btn-lg">
                            <i class="fas fa-plus"></i> Ajukan Peminjaman Sekarang
                        </a>
                    </div>
                <% } %>
            </div>
        </div>
    </div>
</div>

<style>
    .badge {
        font-size: 0.85rem;
        padding: 6px 12px;
    }
    .fw-semibold {
        font-weight: 600;
    }
</style>

<div class="table-toolbar">
    <div class="d-flex gap-2">
        <% if (typeof addUrl !== 'undefined' && addUrl && typeof addLabel !== 'undefined' && addLabel) { %>
            <a href="<%= addUrl %>" class="btn btn-primary">
                <i class="fas fa-plus"></i> <%= addLabel %>
            </a>
        <% } %>
        <a href="<%= refreshUrl %>" class="btn btn-outline-secondary" title="Refresh">
            <i class="fas fa-refresh"></i>
        </a>
    </div>
    <div class="d-flex gap-2">
        <div class="input-group" style="width: <%= typeof searchWidth !== 'undefined' && searchWidth ? searchWidth : '300px' %>;">
            <input type="text" class="form-control" id="<%= typeof searchInputId !== 'undefined' && searchInputId ? searchInputId : 'searchInput' %>" placeholder="<%= searchPlaceholder %>">
            <button class="btn btn-outline-secondary" type="button" id="<%= typeof clearButtonId !== 'undefined' && clearButtonId ? clearButtonId : 'clearSearch' %>">
                <i class="fas fa-times"></i>
            </button>
        </div>
    </div>
</div>

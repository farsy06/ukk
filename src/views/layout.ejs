<!DOCTYPE html>
<html lang="id" data-bs-theme="light">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %> - eSarpra</title>
    <script>
        (function() {
            const savedTheme = localStorage.getItem("theme") || "light";
            document.documentElement.setAttribute("data-bs-theme", savedTheme);
        })();
    </script>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Space+Grotesk:wght@400;500;600;700&family=Instrument+Sans:wght@400;500;600&display=swap" rel="stylesheet">
    <link href="/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/@fortawesome/fontawesome-free@7.1.0/css/all.min.css" rel="stylesheet">
    <link href="/css/main.css" rel="stylesheet">
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark">
        <div class="container">
            <a class="navbar-brand" href="/">
                <i class="fas fa-boxes-stacked"></i>
                <span>eSarpra</span>
            </a>

            <div class="d-flex align-items-center gap-2 d-lg-none">
                <button class="theme-toggle position-relative" type="button" title="Toggle Dark/Light Mode" aria-label="Toggle theme">
                    <i class="fas fa-moon theme-icon-moon"></i>
                    <i class="fas fa-sun theme-icon-sun"></i>
                </button>
                <button
                    class="navbar-toggler"
                    type="button"
                    data-bs-toggle="collapse"
                    data-bs-target="#navbarNav"
                    aria-controls="navbarNav"
                    aria-expanded="false"
                    aria-label="Toggle navigation"
                >
                    <span class="navbar-toggler-icon"></span>
                </button>
            </div>

            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav me-auto">
                    <% if (typeof user !== "undefined" && user) { %>
                        <% if (user.role === "peminjam") { %>
                            <li class="nav-item">
                                <a class="nav-link" href="/alat"><i class="fas fa-box-open me-1"></i>Daftar Alat</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="/peminjaman"><i class="fas fa-history me-1"></i>Riwayat</a>
                            </li>
                        <% } else if (user.role === "petugas") { %>
                            <li class="nav-item">
                                <a class="nav-link" href="/petugas"><i class="fas fa-tachometer-alt me-1"></i>Dashboard</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="/laporan"><i class="fas fa-file-lines me-1"></i>Laporan</a>
                            </li>
                        <% } else if (user.role === "admin") { %>
                            <li class="nav-item">
                                <a class="nav-link" href="/admin"><i class="fas fa-tachometer-alt me-1"></i>Dashboard</a>
                            </li>
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="#" id="kelolaDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    <i class="fas fa-cog me-1"></i>Kelola
                                </a>
                                <ul class="dropdown-menu" aria-labelledby="kelolaDropdown">
                                    <li><a class="dropdown-item" href="/admin/kategori"><i class="fas fa-tags"></i>Kategori</a></li>
                                    <li><a class="dropdown-item" href="/admin/alat"><i class="fas fa-tools"></i>Alat</a></li>
                                    <li><a class="dropdown-item" href="/admin/peminjaman"><i class="fas fa-hand-holding"></i>Peminjaman</a></li>
                                    <li><a class="dropdown-item" href="/admin/user"><i class="fas fa-users"></i>User</a></li>
                                    <li><hr class="dropdown-divider"></li>
                                    <li><a class="dropdown-item" href="/admin/catatan"><i class="fas fa-history"></i>Aktivitas</a></li>
                                    <li><a class="dropdown-item" href="/admin/laporan"><i class="fas fa-file-lines"></i>Laporan</a></li>
                                </ul>
                            </li>
                        <% } %>
                    <% } else { %>
                        <li class="nav-item">
                            <a class="nav-link" href="/"><i class="fas fa-house me-1"></i>Beranda</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/tos"><i class="fas fa-scale-balanced me-1"></i>Syarat</a>
                        </li>
                    <% } %>
                </ul>

                <div class="d-none d-lg-flex align-items-center me-2">
                    <button class="theme-toggle position-relative" type="button" title="Toggle Dark/Light Mode" aria-label="Toggle theme">
                        <i class="fas fa-moon theme-icon-moon"></i>
                        <i class="fas fa-sun theme-icon-sun"></i>
                    </button>
                </div>

                <ul class="navbar-nav">
                    <% if (typeof user !== "undefined" && user) { %>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle d-flex align-items-center gap-2" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                <div class="user-avatar"><%= user.nama.charAt(0).toUpperCase() %></div>
                                <span><%= user.nama %></span>
                            </a>
                            <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="navbarDropdown">
                                <li class="px-3 py-2 border-bottom">
                                    <small class="text-muted d-block">@<%= user.username %></small>
                                    <small class="text-muted"><%= user.email %></small>
                                </li>
                                <li class="mt-2">
                                    <span class="badge bg-primary ms-3"><%= user.role.toUpperCase() %></span>
                                </li>
                                <li class="mt-2"><hr class="dropdown-divider"></li>
                                <li>
                                    <form action="/logout" method="post" class="m-0">
                                        <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                                        <button type="submit" class="dropdown-item text-danger">
                                            <i class="fas fa-sign-out-alt"></i>Logout
                                        </button>
                                    </form>
                                </li>
                            </ul>
                        </li>
                    <% } else { %>
                        <li class="nav-item">
                            <a class="nav-link" href="/login"><i class="fas fa-sign-in-alt me-1"></i>Login</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link btn btn-primary ms-lg-2 text-white px-3" href="/register">
                                <i class="fas fa-user-plus me-1"></i>Daftar
                            </a>
                        </li>
                    <% } %>
                </ul>
            </div>
        </div>
    </nav>

    <main class="container mt-4">
        <% if (typeof alerts !== "undefined" && alerts && alerts.length) { %>
            <% alerts.forEach((item) => { %>
                <div class="alert <%= item.className %> alert-dismissible fade show" role="alert">
                    <i class="<%= item.icon %> me-1"></i><%= item.text %>
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Tutup"></button>
                </div>
            <% }); %>
        <% } %>

        <% if (typeof allowHtml !== "undefined" && allowHtml) { %>
            <!-- codeql[js/xss]=trusted layout injection gated by allowHtml -->
            <%- body %><!-- codeql[js/xss] -->
        <% } else { %>
            <%= body %>
        <% } %>
    </main>

    <footer class="py-5 mt-5">
        <div class="container">
            <div class="row g-4">
                <div class="col-md-4">
                    <h5 class="mb-3"><i class="fas fa-boxes-stacked me-2"></i>eSarpra</h5>
                    <p class="small mb-0 footer-muted">
                        Sistem informasi peminjaman alat untuk pengelolaan inventori yang lebih rapi, cepat, dan terukur.
                    </p>
                </div>
                <div class="col-md-4">
                    <h6 class="mb-3">Navigasi</h6>
                    <ul class="list-unstyled small mb-0">
                        <li><a href="/" class="d-block mb-2 footer-link">Beranda</a></li>
                        <li><a href="/alat" class="d-block mb-2 footer-link">Daftar Alat</a></li>
                        <li><a href="/login" class="d-block mb-2 footer-link">Login</a></li>
                        <li><a href="/tos" class="d-block footer-link">Syarat & Ketentuan</a></li>
                    </ul>
                </div>
                <div class="col-md-4">
                    <h6 class="mb-3">Kontak</h6>
                    <ul class="list-unstyled small mb-0">
                        <li class="mb-2 footer-muted"><i class="fas fa-envelope me-2"></i>admin@esarpra.com</li>
                        <li class="footer-muted"><i class="fas fa-map-marker-alt me-2"></i>Sekolah/Instansi Anda</li>
                    </ul>
                </div>
            </div>
            <hr class="my-4" style="opacity: 0.1;">
            <div class="text-center">
                <small class="footer-muted">&copy; 2026 eSarpra. All rights reserved.</small>
            </div>
        </div>
    </footer>

    <div class="modal fade" id="confirmDeleteModal" tabindex="-1" aria-labelledby="confirmDeleteLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <form id="confirmDeleteForm" method="post" action="#">
                    <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                    <div class="modal-header">
                        <h5 class="modal-title" id="confirmDeleteLabel">Konfirmasi Hapus</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Tutup"></button>
                    </div>
                    <div class="modal-body">
                        <p class="mb-0" id="confirmDeleteMessage">Yakin ingin menghapus item ini?</p>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-outline-secondary" data-bs-dismiss="modal">Batal</button>
                        <button type="submit" class="btn btn-danger" id="confirmDeleteButton">
                            <i class="fas fa-trash"></i> Hapus
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <script src="/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/@fortawesome/fontawesome-free@7.1.0/js/all.min.js"></script>
    <script src="/js/password-utils.js"></script>
    <script src="/js/layout.js"></script>
</body>
</html>

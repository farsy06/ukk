<div class="row">
    <div class="col-12">
        <div class="d-flex justify-content-between align-items-center">
            <div>
                <h2><i class="fas fa-history"></i> Laporan Aktivitas Sistem</h2>
                <p class="text-muted mb-0">Generated: <%= reportData.generatedAt.toLocaleString('id-ID') %></p>
            </div>
            <div class="text-end">
                <div class="badge bg-secondary">
                    <i class="fas fa-chart-bar"></i> Laporan
                </div>
            </div>
        </div>
    </div>
</div>

<div class="row mt-4">
    <div class="col-md-3">
        <div class="card text-white bg-primary">
            <div class="card-body text-center">
                <h6>Total Aktivitas</h6>
                <h3 class="mb-0"><%= reportData.stats.total %></h3>
                <i class="fas fa-history fa-2x mt-2"></i>
            </div>
        </div>
    </div>

    <div class="col-md-3">
        <div class="card text-white bg-info">
            <div class="card-body text-center">
                <h6>User Aktif</h6>
                <h3 class="mb-0"><%= Object.keys(reportData.stats.perUser).length %></h3>
                <i class="fas fa-users fa-2x mt-2"></i>
            </div>
        </div>
    </div>

    <div class="col-md-3">
        <div class="card text-white bg-warning">
            <div class="card-body text-center">
                <h6>Jenis Aktivitas</h6>
                <h3 class="mb-0"><%= Object.keys(reportData.stats.perActivity).length %></h3>
                <i class="fas fa-chart-bar fa-2x mt-2"></i>
            </div>
        </div>
    </div>

    <div class="col-md-3">
        <div class="card text-white bg-success">
            <div class="card-body text-center">
                <h6>Periode</h6>
                <h3 class="mb-0"><%= reportData.stats.period.start ? 'Custom' : 'Semua' %></h3>
                <i class="fas fa-calendar fa-2x mt-2"></i>
            </div>
        </div>
    </div>
</div>

<div class="row mt-4">
    <div class="col-md-6">
        <div class="card">
            <div class="card-header">
                <h6 class="mb-0"><i class="fas fa-list"></i> Daftar Aktivitas</h6>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-striped table-hover">
                        <thead>
                            <tr>
                                <th>#</th>
                                <th>User</th>
                                <th>Aktivitas</th>
                                <th>Waktu</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% reportData.logs.forEach((log, index) => { %>
                            <tr>
                                <td><%= index + 1 %></td>
                                <td><%= log.user?.username || 'System' %></td>
                                <td><%= log.aktivitas %></td>
                                <td><%= log.waktu.toLocaleString('id-ID') %></td>
                            </tr>
                            <% }); %>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

    <div class="col-md-6">
        <div class="card">
            <div class="card-header">
                <h6 class="mb-0"><i class="fas fa-chart-pie"></i> Distribusi User</h6>
            </div>
            <div class="card-body">
                <% Object.entries(reportData.stats.perUser).forEach(([user, count]) => { %>
                <div class="row mb-3">
                    <div class="col-8">
                        <h6><%= user %></h6>
                        <div class="progress" style="height: 20px;">
                            <div class="progress-bar bg-info" style="width: <%= Math.round((count / reportData.stats.total) * 100) %>%">
                                <%= count %>
                            </div>
                        </div>
                    </div>
                    <div class="col-4 text-end">
                        <small class="text-muted"><%= count %> aktivitas</small>
                    </div>
                </div>
                <% }); %>
            </div>
        </div>
    </div>
</div>

<div class="row mt-4">
    <div class="col-md-6">
        <div class="card">
            <div class="card-header">
                <h6 class="mb-0"><i class="fas fa-chart-bar"></i> Distribusi Aktivitas</h6>
            </div>
            <div class="card-body">
                <% Object.entries(reportData.stats.perActivity).forEach(([activity, count]) => { %>
                <div class="row mb-3">
                    <div class="col-8">
                        <h6><%= activity %></h6>
                        <div class="progress" style="height: 20px;">
                            <div class="progress-bar bg-warning" style="width: <%= Math.round((count / reportData.stats.total) * 100) %>%">
                                <%= count %>
                            </div>
                        </div>
                    </div>
                    <div class="col-4 text-end">
                        <small class="text-muted"><%= count %> kali</small>
                    </div>
                </div>
                <% }); %>
            </div>
        </div>
    </div>

    <div class="col-md-6">
        <div class="card">
            <div class="card-header">
                <h6 class="mb-0"><i class="fas fa-clock"></i> Aktivitas Terkini</h6>
            </div>
            <div class="card-body">
                <% reportData.logs.slice(0, 10).forEach((log) => { %>
                <div class="d-flex justify-content-between mb-2">
                    <div>
                        <small class="text-muted"><%= log.aktivitas %></small>
                    </div>
                    <div>
                        <small class="text-muted"><%= log.waktu.toLocaleString('id-ID') %></small>
                    </div>
                </div>
                <% }); %>
            </div>
        </div>
    </div>
</div>

<div class="row mt-4">
    <div class="col-12">
        <div class="card">
            <div class="card-header">
                <h6 class="mb-0"><i class="fas fa-download"></i> Aksi Laporan</h6>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-3">
                        <a href="<%= reportBasePath %>/aktivitas?format=pdf" class="btn btn-primary w-100 mb-2">
                            <i class="fas fa-file-pdf"></i> Download PDF
                        </a>
                    </div>
                    <div class="col-md-3">
                        <a href="<%= reportBasePath %>/aktivitas?format=excel" class="btn btn-success w-100 mb-2">
                            <i class="fas fa-file-excel"></i> Export Excel
                        </a>
                    </div>
                    <div class="col-md-3">
                        <a href="<%= reportBasePath %>" class="btn btn-secondary w-100 mb-2">
                            <i class="fas fa-arrow-left"></i> Kembali
                        </a>
                    </div>
                    <div class="col-md-3">
                        <button onclick="window.print()" class="btn btn-info w-100 mb-2">
                            <i class="fas fa-print"></i> Print
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

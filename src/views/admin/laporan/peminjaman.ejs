<div class="row">
    <div class="col-12">
        <div class="d-flex justify-content-between align-items-center">
            <div>
                <h2><i class="fas fa-hand-holding"></i> Laporan Peminjaman</h2>
                <p class="text-muted mb-0">Generated: <%= reportData.generatedAt.toLocaleString('id-ID') %></p>
            </div>
            <div class="text-end">
                <div class="badge bg-info">
                    <i class="fas fa-chart-bar"></i> Laporan
                </div>
            </div>
        </div>
    </div>
</div>

<div class="row mt-4">
    <div class="col-md-2">
        <div class="card text-white bg-primary">
            <div class="card-body text-center">
                <h6>Total</h6>
                <h3 class="mb-0"><%= reportData.stats.total %></h3>
                <i class="fas fa-handshake fa-2x mt-2"></i>
            </div>
        </div>
    </div>

    <div class="col-md-2">
        <div class="card text-white bg-warning">
            <div class="card-body text-center">
                <h6>Diproses</h6>
                <h3 class="mb-0"><%= reportData.stats.diproses %></h3>
                <i class="fas fa-clock fa-2x mt-2"></i>
            </div>
        </div>
    </div>

    <div class="col-md-2">
        <div class="card text-white bg-success">
            <div class="card-body text-center">
                <h6>Dipinjam</h6>
                <h3 class="mb-0"><%= reportData.stats.dipinjam %></h3>
                <i class="fas fa-hand-holding fa-2x mt-2"></i>
            </div>
        </div>
    </div>

    <div class="col-md-2">
        <div class="card text-white bg-info">
            <div class="card-body text-center">
                <h6>Selesai</h6>
                <h3 class="mb-0"><%= reportData.stats.selesai %></h3>
                <i class="fas fa-check-circle fa-2x mt-2"></i>
            </div>
        </div>
    </div>

    <div class="col-md-2">
        <div class="card text-white bg-danger">
            <div class="card-body text-center">
                <h6>Ditolak</h6>
                <h3 class="mb-0"><%= reportData.stats.ditolak %></h3>
                <i class="fas fa-times-circle fa-2x mt-2"></i>
            </div>
        </div>
    </div>

    <div class="col-md-2">
        <div class="card text-white bg-secondary">
            <div class="card-body text-center">
                <h6>Popular</h6>
                <h3 class="mb-0"><%= Object.keys(reportData.popularItems).length %></h3>
                <i class="fas fa-star fa-2x mt-2"></i>
            </div>
        </div>
    </div>
</div>

<div class="row mt-4">
    <div class="col-md-6">
        <div class="card">
            <div class="card-header">
                <h6 class="mb-0"><i class="fas fa-list"></i> Daftar Peminjaman</h6>
            </div>
            <div class="card-body">
                <%
                    const formatDate = (value) => {
                        if (!value) return "-";
                        const date = value instanceof Date ? value : new Date(value);
                        if (Number.isNaN(date.getTime())) return "-";
                        return date.toLocaleDateString("id-ID");
                    };
                %>
                <div class="table-responsive">
                    <table class="table table-striped table-hover">
                        <thead>
                            <tr>
                                <th>#</th>
                                <th>User</th>
                                <th>Alat</th>
                                <th>Tanggal Pinjam</th>
                                <th>Tanggal Kembali</th>
                                <th>Status</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% reportData.peminjaman.forEach((peminjaman, index) => { %>
                            <tr>
                                <td><%= index + 1 %></td>
                                <td><%= peminjaman.user?.nama || 'Tidak Diketahui' %></td>
                                <td><%= peminjaman.alat?.nama_alat || 'Tidak Diketahui' %></td>
                                <td><%= formatDate(peminjaman.tanggal_pinjam) %></td>
                                <td><%= formatDate(peminjaman.tanggal_kembali) %></td>
                                <td>
                                    <span class="badge <%= peminjaman.status === 'diproses' ? 'bg-warning' : peminjaman.status === 'dipinjam' ? 'bg-success' : peminjaman.status === 'selesai' ? 'bg-info' : 'bg-danger' %>">
                                        <%= peminjaman.status %>
                                    </span>
                                </td>
                            </tr>
                            <% }); %>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

    <div class="col-md-6">
        <div class="card">
            <div class="card-header">
                <h6 class="mb-0"><i class="fas fa-chart-pie"></i> Alat Paling Populer</h6>
            </div>
            <div class="card-body">
                <% Object.entries(reportData.popularItems).sort((a, b) => b[1] - a[1]).slice(0, 5).forEach(([item, count]) => { %>
                <div class="row mb-3">
                    <div class="col-8">
                        <h6><%= item %></h6>
                        <div class="progress" style="height: 20px;">
                            <div class="progress-bar bg-primary" style="width: <%= Math.round((count / reportData.stats.total) * 100) %>%">
                                <%= count %>
                            </div>
                        </div>
                    </div>
                    <div class="col-4 text-end">
                        <small class="text-muted"><%= count %> kali dipinjam</small>
                    </div>
                </div>
                <% }); %>
            </div>
        </div>
    </div>
</div>

<div class="row mt-4">
    <div class="col-12">
        <div class="card">
            <div class="card-header">
                <h6 class="mb-0"><i class="fas fa-download"></i> Aksi Laporan</h6>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-3">
                        <a href="/laporan/peminjaman?format=pdf" class="btn btn-primary w-100 mb-2">
                            <i class="fas fa-file-pdf"></i> Download PDF
                        </a>
                    </div>
                    <div class="col-md-3">
                        <a href="/laporan/peminjaman?format=excel" class="btn btn-success w-100 mb-2">
                            <i class="fas fa-file-excel"></i> Export Excel
                        </a>
                    </div>
                    <div class="col-md-3">
                        <a href="/laporan" class="btn btn-secondary w-100 mb-2">
                            <i class="fas fa-arrow-left"></i> Kembali
                        </a>
                    </div>
                    <div class="col-md-3">
                        <button onclick="window.print()" class="btn btn-info w-100 mb-2">
                            <i class="fas fa-print"></i> Print
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

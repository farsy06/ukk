<div class="row">
    <div class="col-12">
        <div class="d-flex justify-content-between align-items-center">
            <div>
                <h2><i class="fas fa-chart-line"></i> Statistik Sistem</h2>
                <p class="text-muted mb-0">Generated: <%= stats.generatedAt.toLocaleString('id-ID') %></p>
            </div>
            <div class="text-end">
                <div class="badge bg-warning">
                    <i class="fas fa-chart-bar"></i> Statistik
                </div>
            </div>
        </div>
    </div>
</div>

<div class="row mt-4">
    <div class="col-md-3">
        <div class="card text-white bg-primary">
            <div class="card-body text-center">
                <h6>User</h6>
                <h3 class="mb-0"><%= stats.users.total %></h3>
                <div class="row mt-2">
                    <div class="col-6">
                        <small class="text-white">Petugas: <%= stats.users.byRole.petugas || 0 %></small>
                    </div>
                    <div class="col-6">
                        <small class="text-white">Peminjam: <%= stats.users.byRole.peminjam || 0 %></small>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="col-md-3">
        <div class="card text-white bg-success">
            <div class="card-body text-center">
                <h6>Alat</h6>
                <h3 class="mb-0"><%= stats.alat.total %></h3>
                <div class="row mt-2">
                    <div class="col-6">
                        <small class="text-white">Tersedia: <%= stats.alat.byStatus.tersedia || 0 %></small>
                    </div>
                    <div class="col-6">
                        <small class="text-white">Dipinjam: <%= stats.alat.byStatus.dipinjam || 0 %></small>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="col-md-3">
        <div class="card text-white bg-info">
            <div class="card-body text-center">
                <h6>Peminjaman</h6>
                <h3 class="mb-0"><%= stats.peminjaman.total %></h3>
                <div class="row mt-2">
                    <div class="col-6">
                        <small class="text-white">Diproses: <%= stats.peminjaman.byStatus.diproses || 0 %></small>
                    </div>
                    <div class="col-6">
                        <small class="text-white">Selesai: <%= stats.peminjaman.byStatus.selesai || 0 %></small>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="col-md-3">
        <div class="card text-white bg-secondary">
            <div class="card-body text-center">
                <h6>Kategori</h6>
                <h3 class="mb-0"><%= stats.kategori.total %></h3>
                <div class="row mt-2">
                    <div class="col-12">
                        <small class="text-white">Total Alat: <%= stats.kategori.alatPerKategori.reduce((sum, item) => sum + item.count, 0) %></small>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="row mt-4">
    <div class="col-md-6">
        <div class="card">
            <div class="card-header">
                <h6 class="mb-0"><i class="fas fa-chart-pie"></i> Distribusi User</h6>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-6">
                        <div class="text-center">
                            <i class="fas fa-user-shield fa-3x text-warning mb-3"></i>
                            <h5 class="text-warning">Petugas</h5>
                            <h3 class="text-warning"><%= stats.users.byRole.petugas || 0 %></h3>
                            <small class="text-muted">(<%= stats.users.total > 0 ? Math.round(((stats.users.byRole.petugas || 0) / stats.users.total) * 100) : 0 %>% dari total)</small>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="text-center">
                            <i class="fas fa-user fa-3x text-success mb-3"></i>
                            <h5 class="text-success">Peminjam</h5>
                            <h3 class="text-success"><%= stats.users.byRole.peminjam || 0 %></h3>
                            <small class="text-muted">(<%= stats.users.total > 0 ? Math.round(((stats.users.byRole.peminjam || 0) / stats.users.total) * 100) : 0 %>% dari total)</small>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="col-md-6">
        <div class="card">
            <div class="card-header">
                <h6 class="mb-0"><i class="fas fa-chart-bar"></i> Status Alat</h6>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-4 text-center">
                        <i class="fas fa-check-circle fa-2x text-success mb-2"></i>
                        <h6 class="text-success">Tersedia</h6>
                        <h4 class="text-success"><%= stats.alat.byStatus.tersedia || 0 %></h4>
                    </div>
                    <div class="col-md-4 text-center">
                        <i class="fas fa-hand-holding fa-2x text-warning mb-2"></i>
                        <h6 class="text-warning">Dipinjam</h6>
                        <h4 class="text-warning"><%= stats.alat.byStatus.dipinjam || 0 %></h4>
                    </div>
                    <div class="col-md-4 text-center">
                        <i class="fas fa-exclamation-triangle fa-2x text-danger mb-2"></i>
                        <h6 class="text-danger">Rusak</h6>
                        <h4 class="text-danger"><%= stats.alat.byStatus.rusak || 0 %></h4>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="row mt-4">
    <div class="col-md-6">
        <div class="card">
            <div class="card-header">
                <h6 class="mb-0"><i class="fas fa-chart-line"></i> Status Peminjaman</h6>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-3 text-center">
                        <i class="fas fa-clock fa-2x text-warning mb-2"></i>
                        <h6 class="text-warning">Diproses</h6>
                        <h4 class="text-warning"><%= stats.peminjaman.byStatus.diproses || 0 %></h4>
                    </div>
                    <div class="col-md-3 text-center">
                        <i class="fas fa-hand-holding fa-2x text-success mb-2"></i>
                        <h6 class="text-success">Dipinjam</h6>
                        <h4 class="text-success"><%= stats.peminjaman.byStatus.dipinjam || 0 %></h4>
                    </div>
                    <div class="col-md-3 text-center">
                        <i class="fas fa-check-circle fa-2x text-info mb-2"></i>
                        <h6 class="text-info">Selesai</h6>
                        <h4 class="text-info"><%= stats.peminjaman.byStatus.selesai || 0 %></h4>
                    </div>
                    <div class="col-md-3 text-center">
                        <i class="fas fa-times-circle fa-2x text-danger mb-2"></i>
                        <h6 class="text-danger">Ditolak</h6>
                        <h4 class="text-danger"><%= stats.peminjaman.byStatus.ditolak || 0 %></h4>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="col-md-6">
        <div class="card">
            <div class="card-header">
                <h6 class="mb-0"><i class="fas fa-list"></i> Kategori Alat</h6>
            </div>
            <div class="card-body">
                <% stats.kategori.alatPerKategori.forEach(item => { %>
                <div class="row mb-3">
                    <div class="col-8">
                        <h6>Kategori #<%= item.kategori_id %></h6>
                        <div class="progress" style="height: 20px;">
                            <div class="progress-bar bg-primary" style="width: <%= Math.round((item.count / stats.kategori.alatPerKategori.reduce((sum, i) => sum + i.count, 0)) * 100) %>%">
                                <%= item.count %>
                            </div>
                        </div>
                    </div>
                    <div class="col-4 text-end">
                        <small class="text-muted"><%= item.count %> alat</small>
                    </div>
                </div>
                <% }); %>
            </div>
        </div>
    </div>
</div>

<div class="row mt-4">
    <div class="col-md-6">
        <div class="card">
            <div class="card-header">
                <h6 class="mb-0"><i class="fas fa-history"></i> Aktivitas Terkini</h6>
            </div>
            <div class="card-body">
                <% stats.aktivitas.recent.slice(0, 5).forEach(log => { %>
                <div class="d-flex justify-content-between mb-2">
                    <div>
                        <small class="text-muted"><%= log.aktivitas %></small>
                    </div>
                    <div>
                        <small class="text-muted"><%= log.waktu.toLocaleString('id-ID') %></small>
                    </div>
                </div>
                <% }); %>
            </div>
        </div>
    </div>

    <div class="col-md-6">
        <div class="card">
            <div class="card-header">
                <h6 class="mb-0"><i class="fas fa-download"></i> Aksi Statistik</h6>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-4">
                        <a href="<%= reportBasePath %>" class="btn btn-primary w-100 mb-2">
                            <i class="fas fa-chart-bar"></i> Laporan
                        </a>
                    </div>
                    <div class="col-md-4">
                        <a href="/admin" class="btn btn-secondary w-100 mb-2">
                            <i class="fas fa-arrow-left"></i> Dashboard
                        </a>
                    </div>
                    <div class="col-md-4">
                        <button onclick="window.print()" class="btn btn-info w-100 mb-2">
                            <i class="fas fa-print"></i> Print
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

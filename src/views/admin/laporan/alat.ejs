<div class="row">
    <div class="col-12">
        <%- include('../../_partials/page-head', {
            title: '<i class="fas fa-tools"></i> Laporan Inventori Alat',
            subtitle: `Generated: ${reportData.generatedAt.toLocaleString('id-ID')}`,
            actions: '<div class="badge bg-success"><i class="fas fa-chart-bar"></i> Laporan</div>'
        }) %>
    </div>
</div>

<div class="row mt-4">
    <div class="col-md-2">
        <div class="card text-white bg-primary">
            <div class="card-body text-center">
                <h6>Total</h6>
                <h3 class="mb-0"><%= reportData.stats.total %></h3>
                <i class="fas fa-tools fa-2x mt-2"></i>
            </div>
        </div>
    </div>

    <div class="col-md-2">
        <div class="card text-white bg-success">
            <div class="card-body text-center">
                <h6>Tersedia</h6>
                <h3 class="mb-0"><%= reportData.stats.tersedia %></h3>
                <i class="fas fa-check-circle fa-2x mt-2"></i>
            </div>
        </div>
    </div>

    <div class="col-md-2">
        <div class="card text-white bg-warning">
            <div class="card-body text-center">
                <h6>Dipinjam</h6>
                <h3 class="mb-0"><%= reportData.stats.dipinjam %></h3>
                <i class="fas fa-hand-holding fa-2x mt-2"></i>
            </div>
        </div>
    </div>

    <div class="col-md-2">
        <div class="card text-white bg-danger">
            <div class="card-body text-center">
                <h6>Rusak</h6>
                <h3 class="mb-0"><%= reportData.stats.rusak %></h3>
                <i class="fas fa-exclamation-triangle fa-2x mt-2"></i>
            </div>
        </div>
    </div>

    <div class="col-md-2">
        <div class="card text-white bg-info">
            <div class="card-body text-center">
                <h6>Baik</h6>
                <h3 class="mb-0"><%= reportData.stats.bai %></h3>
                <i class="fas fa-heart fa-2x mt-2"></i>
            </div>
        </div>
    </div>

    <div class="col-md-2">
        <div class="card text-white bg-secondary">
            <div class="card-body text-center">
                <h6>Rusak</h6>
                <h3 class="mb-0"><%= reportData.stats.rusakKondisi %></h3>
                <i class="fas fa-broken fa-2x mt-2"></i>
            </div>
        </div>
    </div>
</div>

<div class="row mt-4">
    <div class="col-md-6">
        <div class="card table-card">
            <div class="card-header">
                <h6 class="mb-0"><i class="fas fa-list"></i> Daftar Alat</h6>
            </div>
            <div class="card-body">
                <table class="table table-striped table-hover">
                        <thead>
                            <tr>
                                <th>#</th>
                                <th>Nama Alat</th>
                                <th>Kategori</th>
                                <th>Status</th>
                                <th>Kondisi</th>
                                <th>Stok</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% reportData.alat.forEach((alat, index) => { %>
                            <tr>
                                <td><%= index + 1 %></td>
                                <td><%= alat.nama_alat %></td>
                                <td><%= alat.kategori?.nama_kategori || 'Tidak Diketahui' %></td>
                                <td>
                                    <span class="badge <%= alat.status === 'tersedia' ? 'bg-success' : alat.status === 'dipinjam' ? 'bg-warning' : 'bg-danger' %>">
                                        <%= alat.status %>
                                    </span>
                                </td>
                                <td>
                                    <span class="badge <%= alat.kondisi === 'baik' ? 'bg-info' : 'bg-danger' %>">
                                        <%= alat.kondisi %>
                                    </span>
                                </td>
                                <td>
                                    <span class="badge <%= typeof alat.stok !== 'undefined' ? (alat.stok > 0 ? 'bg-success' : 'bg-danger') : 'bg-secondary' %>">
                                        <%= typeof alat.stok !== 'undefined' ? alat.stok : '-' %>
                                    </span>
                                </td>
                            </tr>
                            <% }); %>
                        </tbody>
                    </table>
            </div>
        </div>
    </div>

    <div class="col-md-6">
        <div class="card">
            <div class="card-header">
                <h6 class="mb-0"><i class="fas fa-chart-bar"></i> Distribusi per Kategori</h6>
            </div>
            <div class="card-body">
                <% Object.keys(reportData.kategoriStats).forEach(kategori => { %>
                <div class="row mb-3">
                    <div class="col-8">
                        <h6><%= kategori %></h6>
                        <div class="progress" style="height: 20px;">
                            <div class="progress-bar bg-success" style="width: <%= Math.round((reportData.kategoriStats[kategori].tersedia / reportData.kategoriStats[kategori].total) * 100) %>%">
                                <%= reportData.kategoriStats[kategori].tersedia %>
                            </div>
                            <div class="progress-bar bg-warning" style="width: <%= Math.round((reportData.kategoriStats[kategori].dipinjam / reportData.kategoriStats[kategori].total) * 100) %>%">
                                <%= reportData.kategoriStats[kategori].dipinjam %>
                            </div>
                            <div class="progress-bar bg-danger" style="width: <%= Math.round((reportData.kategoriStats[kategori].rusak / reportData.kategoriStats[kategori].total) * 100) %>%">
                                <%= reportData.kategoriStats[kategori].rusak %>
                            </div>
                        </div>
                    </div>
                    <div class="col-4 text-end">
                        <small class="text-muted">Total: <%= reportData.kategoriStats[kategori].total %></small>
                    </div>
                </div>
                <% }); %>
            </div>
        </div>
    </div>
</div>

<div class="row mt-4">
    <div class="col-12">
        <div class="card">
            <div class="card-header">
                <h6 class="mb-0"><i class="fas fa-download"></i> Aksi Laporan</h6>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-3">
                        <a href="<%= reportBasePath %>/alat?format=pdf" class="btn btn-primary w-100 mb-2">
                            <i class="fas fa-file-pdf"></i> Download PDF
                        </a>
                    </div>
                    <div class="col-md-3">
                        <a href="<%= reportBasePath %>/alat?format=excel" class="btn btn-success w-100 mb-2">
                            <i class="fas fa-file-excel"></i> Export Excel
                        </a>
                    </div>
                    <div class="col-md-3">
                        <a href="<%= reportBasePath %>" class="btn btn-secondary w-100 mb-2">
                            <i class="fas fa-arrow-left"></i> Kembali
                        </a>
                    </div>
                    <div class="col-md-3">
                        <button onclick="window.print()" class="btn btn-info w-100 mb-2">
                            <i class="fas fa-print"></i> Print
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

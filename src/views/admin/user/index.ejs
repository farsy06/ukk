<div class="row">
    <div class="col-12">
        <h2>Kelola User</h2>
        <p class="text-muted">Buat dan kelola akun user.</p>
    </div>
</div>

<div class="row mt-4">
    <div class="col-12">
        <div class="d-flex justify-content-between mb-3">
            <a href="/admin/user/tambah" class="btn btn-primary">
                <i class="fas fa-plus"></i> Tambah User
            </a>
        </div>
        
        <div class="table-responsive">
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>No</th>
                        <th>Nama</th>
                        <th>Username</th>
                        <th>Email</th>
                        <th>Role</th>
                        <th>Aksi</th>
                    </tr>
                </thead>
                <tbody>
                    <% if (typeof users !== 'undefined' && users && users.length > 0) { %>
                        <% users.forEach(function(user, index) { %>
                            <tr>
                                <td><%= index + 1 %></td>
                                <td><%= user.nama %></td>
                                <td>@<%= user.username %></td>
                                <td><%= user.email %></td>
                                <td>
                                    <% if (user.role === 'admin') { %>
                                        <span class="badge bg-danger">Admin</span>
                                    <% } else if (user.role === 'petugas') { %>
                                        <span class="badge bg-warning">Petugas</span>
                                    <% } else { %>
                                        <span class="badge bg-info">Peminjam</span>
                                    <% } %>
                                </td>
                                <td>
                                    <% if (user.role !== 'admin') { %>
                                        <a href="/admin/user/hapus/<%= user.id %>" class="btn btn-sm btn-danger" onclick="return confirm('Yakin ingin menghapus user ini?')">
                                            <i class="fas fa-trash"></i> Hapus
                                        </a>
                                    <% } %>
                                </td>
                            </tr>
                        <% }); %>
                    <% } else { %>
                        <tr>
                            <td colspan="6" class="text-center">
                                <div class="alert alert-info mb-0">
                                    <i class="fas fa-info-circle"></i> Belum ada user.
                                </div>
                            </td>
                        </tr>
                    <% } %>
                </tbody>
            </table>
        </div>
    </div>
</div>

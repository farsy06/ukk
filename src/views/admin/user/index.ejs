<div class="row">
    <div class="col-12">
        <%- include('../../_partials/page-head', {
            title: 'Kelola User',
            subtitle: 'Buat dan kelola akun user.'
        }) %>
    </div>
</div>

<div class="row mt-4">
    <div class="col-12">
        <%- include('../../_partials/table-toolbar', {
            addUrl: '/admin/user/tambah',
            addLabel: 'Tambah User',
            refreshUrl: '/admin/user',
            searchPlaceholder: 'Cari user...'
        }) %>
        
        <div class="card table-card">
            <div class="card-body">
                <table class="table table-striped table-hover" id="userTable">
                        <thead class="table-light">
                            <tr>
                                <th>No</th>
                                <th>Nama</th>
                                <th>Username</th>
                                <th>Email</th>
                                <th>Role</th>
                                <th>Status</th>
                                <th class="table-actions">Aksi</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% if (typeof users !== 'undefined' && users && users.length > 0) { %>
                                <% users.forEach(function(user, index) { %>
                                    <tr data-id="<%= user.id %>" data-nama="<%= user.nama %>" data-username="<%= user.username %>" data-email="<%= user.email %>" data-role="<%= user.role %>">
                                        <td><%= (pagination && pagination.offset ? pagination.offset : 0) + index + 1 %></td>
                                        <td class="table-actions">
                                            <div class="d-flex align-items-center">
                                                <div class="bg-primary rounded-circle me-2" style="width: 40px; height: 40px; display: flex; align-items: center; justify-content: center;">
                                                    <i class="fas fa-user text-white"></i>
                                                </div>
                                                <div>
                                                    <div class="fw-bold"><%= user.nama %></div>
                                                    <small class="text-muted">ID: <%= user.id %></small>
                                                </div>
                                            </div>
                                        </td>
                                        <td>
                                            <span class="badge bg-secondary">@<%= user.username %></span>
                                        </td>
                                        <td>
                                            <div class="text-truncate" style="max-width: 250px;">
                                                <%= user.email %>
                                            </div>
                                        </td>
                                        <td>
                                            <% if (user.role === 'admin') { %>
                                                <span class="badge bg-danger">
                                                    <i class="fas fa-crown"></i> Admin
                                                </span>
                                            <% } else if (user.role === 'petugas') { %>
                                                <span class="badge bg-warning">
                                                    <i class="fas fa-user-tie"></i> Petugas
                                                </span>
                                            <% } else { %>
                                                <span class="badge bg-info">
                                                    <i class="fas fa-user"></i> Peminjam
                                                </span>
                                            <% } %>
                                        </td>
                                        <td>
                                            <% if (user.is_active) { %>
                                                <span class="badge bg-success">
                                                    <i class="fas fa-check-circle"></i> Aktif
                                                </span>
                                            <% } else { %>
                                                <span class="badge bg-secondary">
                                                    <i class="fas fa-times-circle"></i> Nonaktif
                                                </span>
                                            <% } %>
                                        </td>
                                        <td>
                                            <% if (user.role !== 'admin') { %>
                                                <div class="dropdown">
                                                    <button
                                                        class="btn btn-sm btn-outline-secondary"
                                                        type="button"
                                                        data-bs-toggle="dropdown"
                                                        aria-expanded="false"
                                                        aria-label="Aksi"
                                                        title="Aksi"
                                                    >
                                                        <i class="fas fa-ellipsis-vertical"></i>
                                                    </button>
                                                    <ul class="dropdown-menu dropdown-menu-end">
                                                        <li>
                                                            <button
                                                                class="dropdown-item"
                                                                type="button"
                                                                data-bs-toggle="modal"
                                                                data-bs-target="#confirmDeleteModal"
                                                                data-confirm-href="/admin/user/toggle/<%= user.id %>"
                                                                data-confirm-title="<%= user.is_active ? 'Konfirmasi Nonaktifkan User' : 'Konfirmasi Aktifkan User' %>"
                                                                data-confirm-message="<%= user.is_active ? `Yakin ingin menonaktifkan user ${user.nama} (@${user.username})?` : `Yakin ingin mengaktifkan user ${user.nama} (@${user.username})?` %>"
                                                                data-confirm-label="<%= user.is_active ? 'Nonaktifkan' : 'Aktifkan' %>"
                                                                data-confirm-icon="<%= user.is_active ? 'fas fa-user-slash' : 'fas fa-user-check' %>"
                                                                data-confirm-button-class="<%= user.is_active ? 'btn-warning' : 'btn-success' %>"
                                                            >
                                                                <i class="<%= user.is_active ? 'fas fa-user-slash' : 'fas fa-user-check' %> me-2"></i>
                                                                <%= user.is_active ? 'Nonaktifkan' : 'Aktifkan' %>
                                                            </button>
                                                        </li>
                                                        <li><hr class="dropdown-divider"></li>
                                                        <li>
                                                            <button
                                                                class="dropdown-item text-danger"
                                                                type="button"
                                                                data-bs-toggle="modal"
                                                                data-bs-target="#confirmDeleteModal"
                                                                data-confirm-href="/admin/user/hapus/<%= user.id %>"
                                                                data-confirm-title="Konfirmasi Hapus User"
                                                                data-confirm-message="Yakin ingin menghapus user <%= user.nama %> (@<%= user.username %>)?"
                                                                data-confirm-label="Hapus"
                                                                data-confirm-icon="fas fa-trash"
                                                                data-confirm-button-class="btn-danger"
                                                            >
                                                                <i class="fas fa-trash me-2"></i> Hapus
                                                            </button>
                                                        </li>
                                                    </ul>
                                                </div>
                                            <% } else { %>
                                                <button class="btn btn-sm btn-secondary" disabled title="Admin tidak dapat dihapus">
                                                    <i class="fas fa-ban"></i>
                                                </button>
                                            <% } %>
                                        </td>
                                    </tr>
                                <% }); %>
                            <% } else { %>
                                <tr>
                                    <td colspan="7" class="text-center py-5">
                                        <div class="alert alert-info mb-0">
                                            <i class="fas fa-info-circle"></i> Belum ada user.
                                            <br>
                                            <a href="/admin/user/tambah" class="btn btn-primary mt-2">
                                                <i class="fas fa-plus"></i> Tambah User Pertama
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                            <% } %>
                        </tbody>
                    </table>
            </div>
                <% if (range) { %>
                    <div class="d-flex justify-content-between align-items-center mt-3">
                        <small class="text-muted">
                            Menampilkan <%= range.start %>â€“<%= range.end %> dari <%= range.total %> user
                        </small>
                    </div>
                <% } %>
        </div>

        <% if (pagination && pagination.totalPages > 1) { %>
            <nav class="mt-3" aria-label="User pagination">
                <ul class="pagination justify-content-center">
                    <li class="page-item <%= pagination.hasPrevious ? '' : 'disabled' %>">
                        <a class="page-link" href="?page=<%= pagination.previousPage %>&limit=<%= pagination.perPage %>">Sebelumnya</a>
                    </li>
                    <% for (let p = 1; p <= pagination.totalPages; p++) { %>
                        <li class="page-item <%= p === pagination.currentPage ? 'active' : '' %>">
                            <a class="page-link" href="?page=<%= p %>&limit=<%= pagination.perPage %>"><%= p %></a>
                        </li>
                    <% } %>
                    <li class="page-item <%= pagination.hasNext ? '' : 'disabled' %>">
                        <a class="page-link" href="?page=<%= pagination.nextPage %>&limit=<%= pagination.perPage %>">Berikutnya</a>
                    </li>
                </ul>
            </nav>
        <% } %>
    </div>
</div>

<script>
    document.addEventListener('DOMContentLoaded', function() {
        const searchInput = document.getElementById('searchInput');
        const clearSearch = document.getElementById('clearSearch');
        const table = document.getElementById('userTable');
        const rows = table.querySelectorAll('tbody tr');

        // Search functionality
        if (searchInput) {
            searchInput.addEventListener('input', function() {
                const searchTerm = this.value.toLowerCase().trim();
                
                rows.forEach(row => {
                    const nama = row.getAttribute('data-nama').toLowerCase();
                    const username = row.getAttribute('data-username').toLowerCase();
                    const email = row.getAttribute('data-email').toLowerCase();
                    const role = row.getAttribute('data-role').toLowerCase();
                    
                    const matches = nama.includes(searchTerm) || 
                        username.includes(searchTerm) || 
                        email.includes(searchTerm) || 
                        role.includes(searchTerm);
                    
                    row.style.display = matches ? '' : 'none';
                });
            });
        }

        // Clear search functionality
        if (clearSearch) {
            clearSearch.addEventListener('click', function() {
                searchInput.value = '';
                searchInput.dispatchEvent(new Event('input'));
            });
        }

        // Add keyboard navigation
        document.addEventListener('keydown', function(e) {
            if (e.key === 'Escape' && searchInput.value) {
                searchInput.value = '';
                searchInput.dispatchEvent(new Event('input'));
            }
        });

    });
</script>

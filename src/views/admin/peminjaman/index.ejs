<div class="row">
    <div class="col-12">
        <%- include('../../_partials/page-head', {
            title: 'Kelola Peminjaman',
            subtitle: 'Pantau semua data peminjaman alat.'
        }) %>
    </div>
</div>

<div class="row mt-4">
    <div class="col-12">
        <%- include('../../_partials/table-toolbar', {
            refreshUrl: '/admin/peminjaman',
            searchPlaceholder: 'Cari peminjaman...'
        }) %>

        <div class="card table-card">
            <div class="card-body">
                <table class="table table-striped table-hover table-sm" id="peminjamanTable">
                        <thead class="table-light">
                            <tr>
                                <th>No</th>
                                <th>Peminjam</th>
                                <th>Alat</th>
                                <th>Periode</th>
                                <th>Status</th>
                                <th>Late/Fine</th>
                                <th class="table-actions">Aksi</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% if (typeof peminjaman !== 'undefined' && peminjaman && peminjaman.length > 0) { %>
                                <% peminjaman.forEach(function(item, index) { %>
                                    <% 
                                        const isOverdue = typeof item.isOverdue === 'function' 
                                            ? item.isOverdue() 
                                            : !!item.is_overdue;
                                        const daysOverdue = typeof item.getDaysOverdue === 'function' 
                                            ? item.getDaysOverdue() 
                                            : (item.days_overdue || 0);
                                        const fineAmount = typeof item.calculateFine === 'function' 
                                            ? item.calculateFine() 
                                            : (item.fine_amount || 0);
                                        const paymentStatus = item.status_pembayaran_denda || 'belum_bayar';
                                    %>
                                    <tr data-id="<%= item.id %>" data-peminjam="<%= item.user.nama %>" data-alat="<%= item.alat.nama_alat %>" data-status="<%= item.status %>">
                                        <td><%= (pagination && pagination.offset ? pagination.offset : 0) + index + 1 %></td>
                                        <td class="table-actions">
                                            <div class="d-flex align-items-center">
                                                <div class="bg-info rounded-circle me-2" style="width: 40px; height: 40px; display: flex; align-items: center; justify-content: center;">
                                                    <i class="fas fa-user text-white"></i>
                                                </div>
                                                <div>
                                                    <div class="fw-bold"><%= item.user.nama %></div>
                                                    <small class="text-muted">
                                                        @<%= item.user.username %> | <%= item.user.email %>
                                                    </small>
                                                </div>
                                            </div>
                                        </td>
                                        <td>
                                            <div class="d-flex align-items-center">
                                                <% if (item.alat.foto) { %>
                                                    <img src="<%= item.alat.foto %>" alt="Foto Alat" class="rounded me-2" style="width: 40px; height: 40px; object-fit: cover;">
                                                <% } else { %>
                                                    <div class="bg-secondary rounded me-2" style="width: 40px; height: 40px; display: flex; align-items: center; justify-content: center;">
                                                        <i class="fas fa-box text-white"></i>
                                                    </div>
                                                <% } %>
                                                <div>
                                                    <div class="fw-bold"><%= item.alat.nama_alat %></div>
                                                    <small class="text-muted">
                                                        Kategori: <%= item.alat.kategori ? item.alat.kategori.nama_kategori : 'Tidak ada kategori' %>
                                                    </small>
                                                </div>
                                            </div>
                                        </td>
                                        <td>
                                            <div class="text-nowrap fw-semibold">
                                                <%= new Date(item.tanggal_pinjam).toLocaleDateString('id-ID') %>
                                                <span class="text-muted">→</span>
                                                <%= new Date(item.tanggal_kembali).toLocaleDateString('id-ID') %>
                                            </div>
                                        </td>
                                        <td>
                                            <% if (item.status === 'pending') { %>
                                                <span class="badge bg-warning">
                                                    <i class="fas fa-clock"></i> Menunggu
                                                </span>
                                            <% } else if (item.status === 'disetujui') { %>
                                                <span class="badge bg-info">
                                                    <i class="fas fa-check-circle"></i> Disetujui
                                                </span>
                                            <% } else if (item.status === 'dipinjam') { %>
                                                <span class="badge bg-primary">
                                                    <i class="fas fa-handshake"></i> Dipinjam
                                                </span>
                                            <% } else if (item.status === 'dikembalikan') { %>
                                                <span class="badge bg-success">
                                                    <i class="fas fa-undo"></i> Kembali
                                                </span>
                                            <% } else if (item.status === 'ditolak') { %>
                                                <span class="badge bg-danger">
                                                    <i class="fas fa-times-circle"></i> Ditolak
                                                </span>
                                            <% } %>
                                            <% if (item.kondisi_pengembalian && item.kondisi_pengembalian !== 'normal') { %>
                                                <small class="d-block mt-1 text-danger">
                                                    <i class="fas fa-triangle-exclamation"></i>
                                                    Kondisi: <%= item.kondisi_pengembalian === 'rusak' ? 'Rusak' : 'Hilang' %>
                                                </small>
                                            <% } %>
                                            <% if (item.tanggal_pengembalian) { %>
                                                <small class="text-muted d-block mt-1">
                                                    Kembali: <%= new Date(item.tanggal_pengembalian).toLocaleDateString('id-ID') %>
                                                </small>
                                            <% } %>
                                        </td>
                                        <td>
                                            <% if (fineAmount > 0) { %>
                                                <% if (daysOverdue > 0) { %>
                                                    <span class="badge bg-danger">
                                                        <i class="fas fa-exclamation-triangle"></i> <%= daysOverdue %> hari
                                                    </span>
                                                <% } else if (item.kondisi_pengembalian && item.kondisi_pengembalian !== 'normal') { %>
                                                    <span class="badge bg-warning text-dark">
                                                        <i class="fas fa-triangle-exclamation"></i> Denda Insiden
                                                    </span>
                                                <% } %>
                                                <div class="text-muted small mt-1">
                                                    Rp <%= new Intl.NumberFormat('id-ID').format(fineAmount) %>
                                                </div>
                                                <% if (item.status === 'dikembalikan') { %>
                                                    <div class="mt-1">
                                                        <% if (paymentStatus === 'lunas') { %>
                                                            <span class="badge bg-success">Lunas</span>
                                                        <% } else if (paymentStatus === 'menunggu_verifikasi') { %>
                                                            <span class="badge bg-info">Menunggu Verifikasi</span>
                                                        <% } else if (paymentStatus === 'ditolak') { %>
                                                            <span class="badge bg-danger">Bukti Ditolak</span>
                                                        <% } else { %>
                                                            <span class="badge bg-warning text-dark">Belum Bayar</span>
                                                        <% } %>
                                                    </div>
                                                    <% if (item.bukti_pembayaran) { %>
                                                        <a href="<%= item.bukti_pembayaran %>" target="_blank" class="small d-inline-block mt-1">Lihat bukti</a>
                                                    <% } %>
                                                <% } %>
                                            <% } else { %>
                                                <span class="text-muted">-</span>
                                            <% } %>
                                        </td>
                                        <td>
                                            <div class="dropdown">
                                                <button
                                                    class="btn btn-sm btn-outline-secondary"
                                                    type="button"
                                                    data-bs-toggle="dropdown"
                                                    aria-expanded="false"
                                                    aria-label="Aksi"
                                                    title="Aksi"
                                                >
                                                    <i class="fas fa-ellipsis-vertical"></i>
                                                </button>
                                                <ul class="dropdown-menu dropdown-menu-end">
                                                    <% if (item.status === 'pending') { %>
                                                        <li>
                                                            <a href="/admin/peminjaman/setujui/<%= item.id %>" class="dropdown-item text-success">
                                                                <i class="fas fa-check me-2"></i> Setujui
                                                            </a>
                                                        </li>
                                                        <li>
                                                            <a href="/admin/peminjaman/tolak/<%= item.id %>" class="dropdown-item text-danger">
                                                                <i class="fas fa-times me-2"></i> Tolak
                                                            </a>
                                                        </li>
                                                    <% } else if (item.status === 'dipinjam') { %>
                                                        <li>
                                                            <a href="/admin/peminjaman/kembalikan/<%= item.id %>" class="dropdown-item text-info">
                                                                <i class="fas fa-undo me-2"></i> Kembalikan
                                                            </a>
                                                        </li>
                                                    <% } else { %>
                                                        <li>
                                                            <span class="dropdown-item text-muted">Tidak ada aksi</span>
                                                        </li>
                                                    <% } %>
                                                </ul>
                                            </div>
                                        </td>
                                    </tr>
                                <% }); %>
                            <% } else { %>
                                <tr>
                                    <td colspan="7" class="text-center py-5">
                                        <div class="alert alert-info mb-0">
                                            <i class="fas fa-info-circle"></i> Belum ada data peminjaman.
                                        </div>
                                    </td>
                                </tr>
                            <% } %>
                        </tbody>
                    </table>
            </div>
                <% if (range) { %>
                    <div class="d-flex justify-content-between align-items-center mt-3">
                        <small class="text-muted">
                            Menampilkan <%= range.start %>–<%= range.end %> dari <%= range.total %> peminjaman
                        </small>
                    </div>
                <% } %>
        </div>

        <% if (pagination && pagination.totalPages > 1) { %>
            <nav class="mt-3" aria-label="Peminjaman pagination">
                <ul class="pagination justify-content-center">
                    <li class="page-item <%= pagination.hasPrevious ? '' : 'disabled' %>">
                        <a class="page-link" href="?page=<%= pagination.previousPage %>&limit=<%= pagination.perPage %>">Sebelumnya</a>
                    </li>
                    <% for (let p = 1; p <= pagination.totalPages; p++) { %>
                        <li class="page-item <%= p === pagination.currentPage ? 'active' : '' %>">
                            <a class="page-link" href="?page=<%= p %>&limit=<%= pagination.perPage %>"><%= p %></a>
                        </li>
                    <% } %>
                    <li class="page-item <%= pagination.hasNext ? '' : 'disabled' %>">
                        <a class="page-link" href="?page=<%= pagination.nextPage %>&limit=<%= pagination.perPage %>">Berikutnya</a>
                    </li>
                </ul>
            </nav>
        <% } %>
    </div>
</div>

<script>
    document.addEventListener('DOMContentLoaded', function() {
        const searchInput = document.getElementById('searchInput');
        const clearSearch = document.getElementById('clearSearch');
        const table = document.getElementById('peminjamanTable');
        const rows = table.querySelectorAll('tbody tr');

        // Search functionality
        if (searchInput) {
            searchInput.addEventListener('input', function() {
                const searchTerm = this.value.toLowerCase().trim();
                
                rows.forEach(row => {
                    const peminjam = row.getAttribute('data-peminjam').toLowerCase();
                    const alat = row.getAttribute('data-alat').toLowerCase();
                    const status = row.getAttribute('data-status').toLowerCase();
                    
                    const matches = peminjam.includes(searchTerm) || 
                        alat.includes(searchTerm) || 
                        status.includes(searchTerm);
                    
                    row.style.display = matches ? '' : 'none';
                });
            });
        }

        // Clear search functionality
        if (clearSearch) {
            clearSearch.addEventListener('click', function() {
                searchInput.value = '';
                searchInput.dispatchEvent(new Event('input'));
            });
        }

        // Add keyboard navigation
        document.addEventListener('keydown', function(e) {
            if (e.key === 'Escape' && searchInput.value) {
                searchInput.value = '';
                searchInput.dispatchEvent(new Event('input'));
            }
        });

    });
</script>

<div class="row">
    <div class="col-12">
        <h2>Kelola Alat</h2>
        <p class="text-muted">Kelola inventori alat yang tersedia untuk dipinjam.</p>
    </div>
</div>

<div class="row mt-4">
    <div class="col-12">
        <div class="d-flex justify-content-between align-items-center mb-3">
            <div class="d-flex gap-2">
                <a href="/admin/alat/tambah" class="btn btn-primary">
                    <i class="fas fa-plus"></i> Tambah Alat
                </a>
                <a href="/admin/alat" class="btn btn-outline-secondary" title="Refresh">
                    <i class="fas fa-refresh"></i>
                </a>
            </div>
            <div class="d-flex gap-2">
                <div class="input-group" style="width: 300px;">
                    <input type="text" class="form-control" id="searchInput" placeholder="Cari alat...">
                    <button class="btn btn-outline-secondary" type="button" id="clearSearch">
                        <i class="fas fa-times"></i>
                    </button>
                </div>
            </div>
        </div>

        <div class="card">
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-striped table-hover" id="alatTable">
                        <thead class="table-dark">
                            <tr>
                                <th>No</th>
                                <th>Nama Alat</th>
                                <th>Kategori</th>
                                <th>Stok</th>
                                <th>Kondisi</th>
                                <th>Status</th>
                                <th>Aksi</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% if (typeof alat !== 'undefined' && alat && alat.length > 0) { %>
                                <% alat.forEach(function(item, index) { %>
                                    <tr data-id="<%= item.id %>" data-nama="<%= item.nama_alat %>" data-kategori="<%= item.kategori ? item.kategori.nama_kategori : 'Tidak ada kategori' %>" data-kondisi="<%= item.kondisi %>" data-status="<%= item.status %>">
                                        <td><%= (pagination && pagination.offset ? pagination.offset : 0) + index + 1 %></td>
                                        <td>
                                            <div class="d-flex align-items-center">
                                                <% if (item.foto) { %>
                                                    <img src="<%= item.foto %>" alt="Foto Alat" class="rounded me-2" style="width: 40px; height: 40px; object-fit: cover;">
                                                <% } else { %>
                                                    <div class="bg-secondary rounded me-2" style="width: 40px; height: 40px; display: flex; align-items: center; justify-content: center;">
                                                        <i class="fas fa-camera text-white"></i>
                                                    </div>
                                                <% } %>
                                                <div>
                                                    <div class="fw-bold"><%= item.nama_alat %></div>
                                                    <% if (item.deskripsi) { %>
                                                        <small class="text-muted"><%= item.deskripsi %></small>
                                                    <% } %>
                                                </div>
                                            </div>
                                        </td>
                                        <td>
                                            <span class="badge bg-primary">
                                                <%= item.kategori ? item.kategori.nama_kategori : 'Tidak ada kategori' %>
                                            </span>
                                        </td>
                                        <td>
                                            <span class="badge <%= item.stok > 5 ? 'bg-success' : item.stok > 0 ? 'bg-warning' : 'bg-danger' %>">
                                                <%= item.stok %>
                                                <% if (item.stok <= 2) { %>
                                                    <i class="fas fa-exclamation-triangle ms-1"></i>
                                                <% } %>
                                            </span>
                                        </td>
                                        <td>
                                            <% if (item.kondisi === 'baik') { %>
                                                <span class="badge bg-success">
                                                    <i class="fas fa-check-circle"></i> Baik
                                                </span>
                                            <% } else if (item.kondisi === 'rusak_ringan') { %>
                                                <span class="badge bg-warning">
                                                    <i class="fas fa-exclamation-triangle"></i> Rusak Ringan
                                                </span>
                                            <% } else if (item.kondisi === 'rusak_berat') { %>
                                                <span class="badge bg-danger">
                                                    <i class="fas fa-times-circle"></i> Rusak Berat
                                                </span>
                                            <% } %>
                                        </td>
                                        <td>
                                            <% if (item.status === 'tersedia') { %>
                                                <span class="badge bg-success">
                                                    <i class="fas fa-check"></i> Tersedia
                                                </span>
                                            <% } else if (item.status === 'dipinjam') { %>
                                                <span class="badge bg-primary">
                                                    <i class="fas fa-handshake"></i> Dipinjam
                                                </span>
                                            <% } else if (item.status === 'maintenance') { %>
                                                <span class="badge bg-secondary">
                                                    <i class="fas fa-wrench"></i> Maintenance
                                                </span>
                                            <% } %>
                                        </td>
                                        <td>
                                            <div class="dropdown">
                                                <button
                                                    class="btn btn-sm btn-outline-secondary"
                                                    type="button"
                                                    data-bs-toggle="dropdown"
                                                    aria-expanded="false"
                                                    aria-label="Aksi"
                                                    title="Aksi"
                                                >
                                                    <i class="fas fa-ellipsis-vertical"></i>
                                                </button>
                                                <ul class="dropdown-menu dropdown-menu-end">
                                                    <li>
                                                        <a href="/admin/alat/edit/<%= item.id %>" class="dropdown-item">
                                                            <i class="fas fa-edit me-2"></i> Edit
                                                        </a>
                                                    </li>
                                                    <li><hr class="dropdown-divider"></li>
                                                    <li>
                                                        <button
                                                            class="dropdown-item text-danger"
                                                            type="button"
                                                            data-bs-toggle="modal"
                                                            data-bs-target="#confirmDeleteModal"
                                                            data-confirm-href="/admin/alat/hapus/<%= item.id %>"
                                                            data-confirm-title="Konfirmasi Hapus Alat"
                                                            data-confirm-message="Yakin ingin menghapus alat <%= item.nama_alat %>?"
                                                            data-confirm-label="Hapus"
                                                            data-confirm-icon="fas fa-trash"
                                                            data-confirm-button-class="btn-danger"
                                                        >
                                                            <i class="fas fa-trash me-2"></i> Hapus
                                                        </button>
                                                    </li>
                                                </ul>
                                            </div>
                                        </td>
                                    </tr>
                                <% }); %>
                            <% } else { %>
                                <tr>
                                    <td colspan="7" class="text-center py-5">
                                        <div class="alert alert-info mb-0">
                                            <i class="fas fa-info-circle"></i> Belum ada data alat.
                                            <br>
                                            <a href="/admin/alat/tambah" class="btn btn-primary mt-2">
                                                <i class="fas fa-plus"></i> Tambah Alat Pertama
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                            <% } %>
                        </tbody>
                    </table>
                </div>
            </div>
                <% if (range) { %>
                    <div class="d-flex justify-content-between align-items-center mt-3">
                        <small class="text-muted">
                            Menampilkan <%= range.start %>â€“<%= range.end %> dari <%= range.total %> alat
                        </small>
                    </div>
                <% } %>
        </div>

        <% if (pagination && pagination.totalPages > 1) { %>
            <nav class="mt-3" aria-label="Alat pagination">
                <ul class="pagination justify-content-center">
                    <li class="page-item <%= pagination.hasPrevious ? '' : 'disabled' %>">
                        <a class="page-link" href="?page=<%= pagination.previousPage %>&limit=<%= pagination.perPage %>">Sebelumnya</a>
                    </li>
                    <% for (let p = 1; p <= pagination.totalPages; p++) { %>
                        <li class="page-item <%= p === pagination.currentPage ? 'active' : '' %>">
                            <a class="page-link" href="?page=<%= p %>&limit=<%= pagination.perPage %>"><%= p %></a>
                        </li>
                    <% } %>
                    <li class="page-item <%= pagination.hasNext ? '' : 'disabled' %>">
                        <a class="page-link" href="?page=<%= pagination.nextPage %>&limit=<%= pagination.perPage %>">Berikutnya</a>
                    </li>
                </ul>
            </nav>
        <% } %>
    </div>
</div>

<script>
    document.addEventListener('DOMContentLoaded', function() {
        const searchInput = document.getElementById('searchInput');
        const clearSearch = document.getElementById('clearSearch');
        const table = document.getElementById('alatTable');
        const rows = table.querySelectorAll('tbody tr');

        // Search functionality
        if (searchInput) {
            searchInput.addEventListener('input', function() {
                const searchTerm = this.value.toLowerCase().trim();
                
                rows.forEach(row => {
                    const nama = row.getAttribute('data-nama').toLowerCase();
                    const kategori = row.getAttribute('data-kategori').toLowerCase();
                    const kondisi = row.getAttribute('data-kondisi').toLowerCase();
                    const status = row.getAttribute('data-status').toLowerCase();
                    
                    const matches = nama.includes(searchTerm) || 
                                   kategori.includes(searchTerm) || 
                                   kondisi.includes(searchTerm) || 
                                   status.includes(searchTerm);
                    
                    row.style.display = matches ? '' : 'none';
                });
            });
        }

        // Clear search functionality
        if (clearSearch) {
            clearSearch.addEventListener('click', function() {
                searchInput.value = '';
                searchInput.dispatchEvent(new Event('input'));
            });
        }

        // Add hover effects for better UX
        rows.forEach(row => {
            row.addEventListener('mouseenter', function() {
                this.style.backgroundColor = '#f8f9fa';
            });
            
            row.addEventListener('mouseleave', function() {
                this.style.backgroundColor = '';
            });
        });

        // Add keyboard navigation
        document.addEventListener('keydown', function(e) {
            if (e.key === 'Escape' && searchInput.value) {
                searchInput.value = '';
                searchInput.dispatchEvent(new Event('input'));
            }
        });

    });
</script>

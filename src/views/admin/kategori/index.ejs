<div class="row">
    <div class="col-12">
        <%- include('../../_partials/page-head', {
            title: 'Kelola Kategori Alat',
            subtitle: 'Kelola kategori untuk mengorganisir alat.'
        }) %>
    </div>
</div>

<div class="row mt-4">
    <div class="col-12">
        <%- include('../../_partials/table-toolbar', {
            addUrl: '/admin/kategori/tambah',
            addLabel: 'Tambah Kategori',
            refreshUrl: '/admin/kategori',
            searchPlaceholder: 'Cari kategori...'
        }) %>

        <div class="card table-card">
            <div class="card-body">
                <table class="table table-striped table-hover" id="kategoriTable">
                        <thead class="table-light">
                            <tr>
                                <th>No</th>
                                <th>Nama Kategori</th>
                                <th>Deskripsi</th>
                                <th>Jumlah Alat</th>
                                <th class="table-actions">Aksi</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% if (typeof kategori !== 'undefined' && kategori && kategori.length > 0) { %>
                                <% kategori.forEach(function(item, index) { %>
                                    <tr data-id="<%= item.id %>" data-nama="<%= item.nama_kategori %>" data-deskripsi="<%= item.deskripsi || '' %>">
                                        <td><%= index + 1 %></td>
                                        <td class="table-actions">
                                            <div class="d-flex align-items-center">
                                                <div class="bg-primary rounded me-2" style="width: 40px; height: 40px; display: flex; align-items: center; justify-content: center;">
                                                    <i class="fas fa-layer-group text-white"></i>
                                                </div>
                                                <div>
                                                    <div class="fw-bold"><%= item.nama_kategori %></div>
                                                    <small class="text-muted">ID: <%= item.id %></small>
                                                </div>
                                            </div>
                                        </td>
                                        <td>
                                            <% if (item.deskripsi) { %>
                                                <div class="text-truncate" style="max-width: 300px;">
                                                    <%= item.deskripsi %>
                                                </div>
                                            <% } else { %>
                                                <span class="text-muted">-</span>
                                            <% } %>
                                        </td>
                                        <td>
                                            <span class="badge bg-info">
                                                <%= item.alat_count || 0 %> alat
                                            </span>
                                        </td>
                                        <td>
                                            <div class="dropdown">
                                                <button
                                                    class="btn btn-sm btn-outline-secondary"
                                                    type="button"
                                                    data-bs-toggle="dropdown"
                                                    aria-expanded="false"
                                                    aria-label="Aksi"
                                                    title="Aksi"
                                                >
                                                    <i class="fas fa-ellipsis-vertical"></i>
                                                </button>
                                                <ul class="dropdown-menu dropdown-menu-end">
                                                    <li>
                                                        <a href="/admin/kategori/edit/<%= item.id %>" class="dropdown-item">
                                                            <i class="fas fa-edit me-2"></i> Edit
                                                        </a>
                                                    </li>
                                                    <li><hr class="dropdown-divider"></li>
                                                    <li>
                                                        <% if ((item.alat_count || 0) > 0) { %>
                                                            <button
                                                                class="dropdown-item text-muted"
                                                                type="button"
                                                                disabled
                                                                title="Tidak bisa dihapus karena masih digunakan oleh alat"
                                                            >
                                                                <i class="fas fa-trash me-2"></i> Hapus
                                                                <small class="ms-1">(terpakai)</small>
                                                            </button>
                                                        <% } else { %>
                                                            <button
                                                                class="dropdown-item text-danger"
                                                                type="button"
                                                                data-bs-toggle="modal"
                                                                data-bs-target="#confirmDeleteModal"
                                                                data-confirm-href="/admin/kategori/hapus/<%= item.id %>"
                                                                data-confirm-title="Konfirmasi Hapus Kategori"
                                                                data-confirm-message="Yakin ingin menghapus kategori <%= item.nama_kategori %>?"
                                                                data-confirm-label="Hapus"
                                                                data-confirm-icon="fas fa-trash"
                                                                data-confirm-button-class="btn-danger"
                                                            >
                                                                <i class="fas fa-trash me-2"></i> Hapus
                                                            </button>
                                                        <% } %>
                                                    </li>
                                                </ul>
                                            </div>
                                        </td>
                                    </tr>
                                <% }); %>
                            <% } else { %>
                                <tr>
                                    <td colspan="5" class="text-center py-5">
                                        <div class="alert alert-info mb-0">
                                            <i class="fas fa-info-circle"></i> Belum ada kategori.
                                            <br>
                                            <a href="/admin/kategori/tambah" class="btn btn-primary mt-2">
                                                <i class="fas fa-plus"></i> Tambah Kategori Pertama
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                            <% } %>
                        </tbody>
                    </table>
            </div>
        </div>
    </div>
</div>

<script>
    document.addEventListener('DOMContentLoaded', function() {
        const searchInput = document.getElementById('searchInput');
        const clearSearch = document.getElementById('clearSearch');
        const table = document.getElementById('kategoriTable');
        const rows = table.querySelectorAll('tbody tr');

        // Search functionality
        if (searchInput) {
            searchInput.addEventListener('input', function() {
                const searchTerm = this.value.toLowerCase().trim();
                
                rows.forEach(row => {
                    const nama = row.getAttribute('data-nama').toLowerCase();
                    const deskripsi = row.getAttribute('data-deskripsi').toLowerCase();
                    
                    const matches = nama.includes(searchTerm) || deskripsi.includes(searchTerm);
                    
                    row.style.display = matches ? '' : 'none';
                });
            });
        }

        // Clear search functionality
        if (clearSearch) {
            clearSearch.addEventListener('click', function() {
                searchInput.value = '';
                searchInput.dispatchEvent(new Event('input'));
            });
        }

        // Add keyboard navigation
        document.addEventListener('keydown', function(e) {
            if (e.key === 'Escape' && searchInput.value) {
                searchInput.value = '';
                searchInput.dispatchEvent(new Event('input'));
            }
        });

    });
</script>

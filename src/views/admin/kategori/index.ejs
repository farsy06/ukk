<div class="row">
    <div class="col-12">
        <h2>Kelola Kategori Alat</h2>
        <p class="text-muted">Kelola kategori untuk mengorganisir alat.</p>
    </div>
</div>

<div class="row mt-4">
    <div class="col-12">
        <div class="d-flex justify-content-between mb-3">
            <a href="/admin/kategori/tambah" class="btn btn-primary">
                <i class="fas fa-plus"></i> Tambah Kategori
            </a>
        </div>

        <div class="table-responsive">
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>No</th>
                        <th>Nama Kategori</th>
                        <th>Aksi</th>
                    </tr>
                </thead>
                <tbody>
                    <% if (typeof kategori !== 'undefined' && kategori && kategori.length > 0) { %>
                        <% kategori.forEach(function(item, index) { %>
                            <tr>
                                <td><%= index + 1 %></td>
                                <td><%= item.nama_kategori %></td>
                                <td>
                                    <a href="/admin/kategori/edit/<%= item.id %>" class="btn btn-sm btn-warning">
                                        <i class="fas fa-edit"></i> Edit
                                    </a>
                                    <a href="/admin/kategori/hapus/<%= item.id %>" class="btn btn-sm btn-danger" onclick="return confirm('Yakin ingin menghapus kategori ini?')">
                                        <i class="fas fa-trash"></i> Hapus
                                    </a>
                                </td>
                            </tr>
                        <% }); %>
                    <% } else { %>
                        <tr>
                            <td colspan="3" class="text-center">
                                <div class="alert alert-info mb-0">
                                    <i class="fas fa-info-circle"></i> Belum ada kategori.
                                </div>
                            </td>
                        </tr>
                    <% } %>
                </tbody>
            </table>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-12">
        <h2>Log Aktivitas</h2>
        <p class="text-muted">Pantau aktivitas sistem oleh admin dan petugas.</p>
    </div>
</div>

<div class="row mt-4">
    <div class="col-12">
        <div class="table-responsive">
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>No</th>
                        <th>User</th>
                        <th>Aktivitas</th>
                        <th>Waktu</th>
                    </tr>
                </thead>
                <tbody>
                    <% if (typeof logs !== 'undefined' && logs && logs.length > 0) { %>
                        <% logs.forEach(function(log, index) { %>
                            <tr>
                                <td><%= index + 1 %></td>
                                <td>
                                    <%= log.user.nama %><br>
                                    <small class="text-muted">
                                        @<%= log.user.username %> | <%= log.user.email %><br>
                                        <span class="badge bg-secondary"><%= log.user.role %></span>
                                    </small>
                                </td>
                                <td><%= log.aktivitas %></td>
                                <td>
                                    <%= new Date(log.waktu).toLocaleDateString('id-ID') %><br>
                                    <small class="text-muted"><%= new Date(log.waktu).toLocaleTimeString('id-ID') %></small>
                                </td>
                            </tr>
                        <% }); %>
                    <% } else { %>
                        <tr>
                            <td colspan="4" class="text-center">
                                <div class="alert alert-info mb-0">
                                    <i class="fas fa-info-circle"></i> Belum ada log aktivitas.
                                </div>
                            </td>
                        </tr>
                    <% } %>
                </tbody>
            </table>
        </div>
    </div>
</div>

<style>
    .admin-hero {
        padding: 1.35rem 1.5rem;
        border-radius: 1rem;
        border: 1px solid var(--border-color);
        background: linear-gradient(130deg, rgba(37, 99, 235, 0.16), rgba(14, 165, 233, 0.12));
        box-shadow: var(--shadow-soft);
    }
    .admin-stat {
        border-radius: 1rem;
        border: 1px solid var(--border-color);
    }
    .admin-stat .icon {
        width: 46px;
        height: 46px;
        border-radius: 0.85rem;
        display: inline-flex;
        align-items: center;
        justify-content: center;
        background: var(--surface-2);
        color: var(--primary-color);
        border: 1px solid var(--border-color);
    }
    .admin-panel {
        border-radius: 1rem;
        border: 1px solid var(--border-color);
    }
    .quick-link {
        border: 1px solid var(--border-color);
        border-radius: 0.85rem;
        padding: 0.75rem 0.85rem;
        background: var(--surface);
        color: var(--text-color);
        text-decoration: none;
        transition: all 0.2s ease;
    }
    .quick-link:hover {
        background: var(--surface-2);
        border-color: rgba(var(--bs-primary-rgb), 0.35);
        color: var(--text-color);
        transform: translateY(-1px);
    }
</style>

<div class="row">
    <div class="col-12">
        <div class="admin-hero d-flex flex-wrap justify-content-between align-items-center gap-3">
            <div>
                <h2 class="mb-1">Dashboard Admin</h2>
                <p class="text-muted mb-0">Selamat datang, <%= user.nama %>.</p>
            </div>
            <div class="text-end">
                <span class="badge bg-primary mb-2"><i class="fas fa-user-shield me-1"></i>Admin</span>
                <div class="small text-muted">
                    <i class="fas fa-calendar-alt me-1"></i>
                    <%= new Date().toLocaleDateString('id-ID', { weekday: 'long', year: 'numeric', month: 'long', day: 'numeric' }) %>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="row mt-4 g-3">
    <div class="col-sm-6 col-xl-3">
        <div class="card admin-stat h-100">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-start mb-2">
                    <span class="icon"><i class="fas fa-tags"></i></span>
                    <span class="badge bg-primary-subtle text-primary border border-primary-subtle">Kategori</span>
                </div>
                <h3 class="mb-1"><%= stats.kategori %></h3>
                <p class="text-muted small mb-3">Kategori aktif</p>
                <a href="/admin/kategori" class="btn btn-sm btn-outline-primary">Kelola</a>
            </div>
        </div>
    </div>
    <div class="col-sm-6 col-xl-3">
        <div class="card admin-stat h-100">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-start mb-2">
                    <span class="icon"><i class="fas fa-tools"></i></span>
                    <span class="badge bg-success-subtle text-success border border-success-subtle">Alat</span>
                </div>
                <h3 class="mb-1"><%= stats.alat %></h3>
                <p class="text-muted small mb-3">Inventori terdaftar</p>
                <a href="/admin/alat" class="btn btn-sm btn-outline-success">Kelola</a>
            </div>
        </div>
    </div>
    <div class="col-sm-6 col-xl-3">
        <div class="card admin-stat h-100">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-start mb-2">
                    <span class="icon"><i class="fas fa-hand-holding"></i></span>
                    <span class="badge bg-info-subtle text-info border border-info-subtle">Peminjaman</span>
                </div>
                <h3 class="mb-1"><%= stats.peminjaman %></h3>
                <p class="text-muted small mb-3">Transaksi tercatat</p>
                <a href="/admin/peminjaman" class="btn btn-sm btn-outline-info">Lihat</a>
            </div>
        </div>
    </div>
    <div class="col-sm-6 col-xl-3">
        <div class="card admin-stat h-100">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-start mb-2">
                    <span class="icon"><i class="fas fa-users"></i></span>
                    <span class="badge bg-warning-subtle text-warning border border-warning-subtle">User</span>
                </div>
                <h3 class="mb-1"><%= stats.user %></h3>
                <p class="text-muted small mb-3">Pengguna terdaftar</p>
                <a href="/admin/user" class="btn btn-sm btn-outline-warning">Kelola</a>
            </div>
        </div>
    </div>
</div>

<div class="row mt-4 g-3">
    <div class="col-lg-8">
        <div class="card admin-panel h-100">
            <div class="card-header d-flex justify-content-between align-items-center">
                <h6 class="mb-0"><i class="fas fa-bolt me-2"></i>Akses Cepat</h6>
                <small class="text-muted">Operasi admin</small>
            </div>
            <div class="card-body">
                <div class="row g-2">
                    <div class="col-md-6">
                        <a href="/admin/kategori/tambah" class="quick-link d-flex justify-content-between align-items-center">
                            <span><i class="fas fa-plus-circle me-2 text-primary"></i>Tambah Kategori</span>
                            <i class="fas fa-arrow-right text-muted"></i>
                        </a>
                    </div>
                    <div class="col-md-6">
                        <a href="/admin/alat/tambah" class="quick-link d-flex justify-content-between align-items-center">
                            <span><i class="fas fa-plus-circle me-2 text-success"></i>Tambah Alat</span>
                            <i class="fas fa-arrow-right text-muted"></i>
                        </a>
                    </div>
                    <div class="col-md-6">
                        <a href="/admin/user/tambah" class="quick-link d-flex justify-content-between align-items-center">
                            <span><i class="fas fa-plus-circle me-2 text-warning"></i>Tambah User</span>
                            <i class="fas fa-arrow-right text-muted"></i>
                        </a>
                    </div>
                    <div class="col-md-6">
                        <a href="/admin/peminjaman" class="quick-link d-flex justify-content-between align-items-center">
                            <span><i class="fas fa-list me-2 text-info"></i>Semua Peminjaman</span>
                            <i class="fas fa-arrow-right text-muted"></i>
                        </a>
                    </div>
                    <div class="col-md-6">
                        <a href="/admin/catatan" class="quick-link d-flex justify-content-between align-items-center">
                            <span><i class="fas fa-history me-2 text-secondary"></i>Log Aktivitas</span>
                            <i class="fas fa-arrow-right text-muted"></i>
                        </a>
                    </div>
                    <div class="col-md-6">
                        <a href="/admin/laporan" class="quick-link d-flex justify-content-between align-items-center">
                            <span><i class="fas fa-chart-bar me-2 text-danger"></i>Laporan</span>
                            <i class="fas fa-arrow-right text-muted"></i>
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-lg-4">
        <div class="card admin-panel h-100">
            <div class="card-header">
                <h6 class="mb-0"><i class="fas fa-user-circle me-2"></i>Profil Saya</h6>
            </div>
            <div class="card-body">
                <div class="d-flex align-items-center mb-3">
                    <div class="user-avatar me-3"><%= user.nama.charAt(0).toUpperCase() %></div>
                    <div>
                        <div class="fw-semibold"><%= user.nama %></div>
                        <small class="text-muted">@<%= user.username %></small>
                    </div>
                </div>
                <div class="small text-muted mb-2"><i class="fas fa-envelope me-2"></i><%= user.email %></div>
                <div class="small text-muted mb-3">
                    <i class="fas fa-clock me-2"></i>
                    Login terakhir:
                    <%= user.last_login ? new Date(user.last_login).toLocaleDateString('id-ID', { day: 'numeric', month: 'short', year: 'numeric' }) : 'Pertama kali' %>
                </div>
                <span class="badge bg-primary"><%= user.role.toUpperCase() %></span>
            </div>
        </div>
    </div>
</div>
